    // Step 1: Next button - Do SNMP walk
    document.getElementById('next-step-btn').addEventListener('click', async function() {
      const formData = new FormData(document.getElementById('add-device-form'));
      currentDeviceData = Object.fromEntries(formData);
      
      // Validate form
      if (!currentDeviceData.id || !currentDeviceData.name || !currentDeviceData.host || !currentDeviceData.community) {
        showToast('Please fill in all fields', 'warning');
        return;
      }

      // Handle vendor selection
      if (currentDeviceData.vendor === 'auto') {
        currentDeviceData.vendor = 'standard'; // Will be auto-detected during discovery
      }

      // Disable button and show loading
      this.disabled = true;
      this.textContent = '⏳ Discovering interfaces...';

      try {
        // Call API to get interfaces from device via SNMP walk
        const response = await fetch('/api/discover-interfaces', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            host: currentDeviceData.host,
            community: currentDeviceData.community
          })
        });

        if (!response.ok) {
          throw new Error('Failed to discover interfaces');
        }

        const data = await response.json();
        const interfaces = data.interfaces || [];
        const detectedVendor = data.vendor || 'standard';

        // Update vendor if auto-detected
        if (currentDeviceData.vendor === 'standard' && detectedVendor !== 'standard') {
          currentDeviceData.vendor = detectedVendor;
          showToast(`Vendor auto-detected: ${detectedVendor}`, 'info');

            <input type="checkbox" 
                   name="interface-edit-select" 
                   value="${iface.name}"
                   data-index="${iface.index}"
                   class="w-4 h-4 rounded accent-blue-500"
                   ${isChecked ? 'checked' : ''}>
            <span class="text-sm text-gray-300 group-hover:text-white">
              <i class="fas fa-link text-blue-400 mr-1"></i>${iface.name}
            </span>
          </label>

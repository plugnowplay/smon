    function loadInterfaces(deviceId) {
      const container = document.getElementById(`interfaces-${deviceId}`);
      container.innerHTML = '<p class="text-gray-500 text-sm col-span-full">Loading interfaces...</p>';
      
      const device = devices[deviceId];
      
      fetch('/api/discover-interfaces', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          host: device.host,
          community: device.community
        })
      })
        .then(response => response.json())
        .then(data => {
          const interfaces = data.interfaces || [];
          
          if (interfaces.length === 0) {
            container.innerHTML = '<p class="text-gray-500 text-sm col-span-full">No interfaces found</p>';
            return;
          }
          
          const selectedInterfaces = device.selectedInterfaces || [];
          
          let html = '';
          interfaces.forEach(iface => {
            // Check if interface is selected (support both old string format and new object format)
            const isChecked = selectedInterfaces.some(selected => 
              typeof selected === 'string' ? selected === iface.name : selected.name === iface.name
            );
            html += `
              <label class="flex items-center gap-2 p-3 bg-slate-700 rounded-lg hover:bg-slate-600 transition-all cursor-pointer group">
                <input type="checkbox" 
                       name="interface-${deviceId}" 
                       value="${iface.name}" 
                       data-index="${iface.index}"
                       ${isChecked ? 'checked' : ''}
                       class="w-4 h-4 rounded accent-blue-500">
                <span class="text-sm text-gray-300 group-hover:text-white">${iface.name}</span>
              </label>
            `;
          });
          
          container.innerHTML = html;
        })
        .catch(err => {
          console.error('Error loading interfaces:', err);
          container.innerHTML = '<p class="text-red-400 text-sm col-span-full">Error loading interfaces</p>';
        });
    }

    function saveInterfaceSelection(deviceId) {
      const checkboxes = document.querySelectorAll(`input[name="interface-${deviceId}"]:checked`);
      const selectedInterfaces = Array.from(checkboxes).map(cb => ({
        index: parseInt(cb.getAttribute('data-index')),
        name: cb.value
      }));
      
      fetch(`/api/devices/${deviceId}/select-interfaces`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ selectedInterfaces })
      })
        .then(response => response.json())
        .then(data => {
          // Update the displayed selected interfaces
          const selectedNames = selectedInterfaces.map(iface => iface.name);
          document.getElementById(`selected-${deviceId}`).innerHTML = 
            selectedNames.length > 0 
              ? `<span class="inline-block">${selectedNames.join(', ')}</span>`
              : '<span class="text-gray-500">No interfaces selected</span>';
          
          // Update the devices object
          devices[deviceId].selectedInterfaces = selectedInterfaces;
          
          const notification = document.createElement('div');
          notification.className = 'fixed top-4 right-4 bg-green-600 text-white px-6 py-3 rounded-lg shadow-lg';
          notification.textContent = '✓ Interfaces saved successfully';
          document.body.appendChild(notification);
          setTimeout(() => notification.remove(), 3000);

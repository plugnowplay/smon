      errorDiv.classList.add('hidden');
      container.classList.remove('hidden');
      loadingDiv.classList.add('hidden');

      const currentSelected = editDeviceData.selectedInterfaces || [];
      // Support both old format (array of strings) and new format (array of {index, name})
      const currentSelectedNames = currentSelected.map(i => typeof i === 'string' ? i : i.name);
      const discoveredNames = interfaces.map(i => i.name);
      
      // Find interfaces that were previously selected but no longer discovered
      const missingInterfaces = currentSelectedNames.filter(name => !discoveredNames.includes(name));

      let html = '';
      
      // First, show discovered interfaces
      interfaces.forEach(iface => {
        // Check: currently selected OR matches pattern (ether/vlan)
        const isChecked = currentSelectedNames.includes(iface.name) || 
                         iface.name.includes('ether') || 
                         iface.name.includes('vlan');
        html += `

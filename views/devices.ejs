          const notification = document.createElement('div');
          notification.className = 'fixed top-4 right-4 bg-red-600 text-white px-6 py-3 rounded-lg shadow-lg';
          notification.textContent = '✗ Failed to save interfaces';
          document.body.appendChild(notification);
          setTimeout(() => notification.remove(), 3000);
        });
    }


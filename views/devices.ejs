    function displayEditInterfaceSelection(interfaces) {
      const container = document.getElementById('edit-interfaces-list');
      const loadingDiv = document.getElementById('edit-interfaces-loading');
      const errorDiv = document.getElementById('edit-interfaces-error');

      if (interfaces.length === 0) {
        errorDiv.classList.remove('hidden');
        document.getElementById('edit-error-message').textContent = 'No interfaces found. Check SNMP settings.';
        container.classList.add('hidden');
        return;

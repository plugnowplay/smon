          html += `
            <div class="flex items-center gap-2 p-3 bg-slate-700/50 rounded-lg opacity-50 group">
              <i class="fas fa-unlink text-red-400 mr-1"></i>
              <span class="text-sm text-gray-400 line-through">${name}</span>
              <span class="text-xs text-gray-500">(disconnected)</span>
            </div>
          `;
        });
        html += '</div>';
      }
      
      container.innerHTML = html;

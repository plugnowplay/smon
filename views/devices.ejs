    // Edit Modal - Step 1: Next button - Do SNMP walk
    document.getElementById('edit-next-step-btn').addEventListener('click', async function() {
      const formData = new FormData(document.getElementById('edit-device-form'));
      const deviceId = formData.get('id');
      const name = formData.get('name');
      const host = formData.get('host');
      const community = formData.get('community');
      
      // Validate form
      if (!name || !host || !community) {
        showToast('Please fill in all fields', 'warning');
        return;
      }

      // Disable button and show loading
      this.disabled = true;
      this.textContent = '⏳ Discovering interfaces...';

      try {
        // Call API to get interfaces from device via SNMP walk
        const response = await fetch('/api/discover-interfaces', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            host: host,
            community: community
          })
        });

        if (!response.ok) {
          throw new Error('Failed to discover interfaces');
        }

        const data = await response.json();
        const interfaces = data.interfaces || [];

        // Display interfaces in step 2
        displayEditInterfaceSelection(interfaces);

        // Move to step 2
        document.getElementById('edit-step-1-form').classList.add('hidden');
        document.getElementById('edit-step-2-interfaces').classList.remove('hidden');
        document.getElementById('edit-modal-title').textContent = 'Update Interfaces to Graph';

      } catch (err) {
        console.error('Error discovering interfaces:', err);
        showToast('Failed to discover interfaces. Please check the host IP and SNMP community.', 'error');
      } finally {
        this.disabled = false;
        this.textContent = '➜ Next: Update Interfaces';

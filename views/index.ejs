  <script>
    // Ping monitoring state
    let pingTargets = <%- JSON.stringify(pingTargets) %>;
    let isPingMonitoring = false;
    let pingInterval = <%= settings.pingInterval ? settings.pingInterval : 60000 %>;

    // Update last updated time
    function updateLastUpdateTime() {
      document.getElementById('last-update').textContent = new Date().toLocaleString();
    }

    // Perform ping test for dashboard
    async function performDashboardPing(target) {
      try {
        const response = await fetch('/api/ping-test', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ host: target.host, targetId: target.id })
        });
        
        const result = await response.json();
        
        if (result.success) {
          updatePingCard(target.id, result);
        }
      } catch (error) {
        console.error(`Error pinging ${target.name}:`, error);
        updatePingCardError(target.id);
      }
    }

    // Update ping card with result
    function updatePingCard(targetId, result) {
      const card = document.querySelector(`[data-target-id="${targetId}"]`);
      if (!card) return;
      
      const statusIndicator = card.querySelector('.status-indicator');
      const latency = card.querySelector('.latency');
      const packetLoss = card.querySelector('.packet-loss');
      
      if (result.alive) {
        statusIndicator.innerHTML = '<i class="fas fa-circle text-green-500 text-xs"></i>';
        latency.textContent = result.time !== 'unknown' ? `${result.time} ms` : '--';
        latency.className = result.time > 100 ? 'latency text-yellow-400 font-medium ml-1' : 'latency text-green-400 font-medium ml-1';
        packetLoss.textContent = result.packetLoss ? `${result.packetLoss}%` : '0%';
      } else {
        statusIndicator.innerHTML = '<i class="fas fa-circle text-red-500 text-xs"></i>';
        latency.textContent = 'Timeout';
        latency.className = 'latency text-red-400 font-medium ml-1';
        packetLoss.textContent = '100%';
      }
    }

    // Update ping card with error
    function updatePingCardError(targetId) {
      const card = document.querySelector(`[data-target-id="${targetId}"]`);
      if (!card) return;
      
      const statusIndicator = card.querySelector('.status-indicator');
      const latency = card.querySelector('.latency');
      const packetLoss = card.querySelector('.packet-loss');
      
      statusIndicator.innerHTML = '<i class="fas fa-circle text-gray-500 text-xs"></i>';
      latency.textContent = 'Error';
      latency.className = 'latency text-gray-400 font-medium ml-1';
      packetLoss.textContent = '--';
    }

    // Start ping monitoring for dashboard
    function startDashboardPingMonitoring() {
      if (isPingMonitoring || pingTargets.length === 0) return;
      
      isPingMonitoring = true;
      
      // Initial ping
      pingTargets.forEach(target => {
        if (target.enabled) {
          performDashboardPing(target);
        }
      });
      
      // Periodic ping
      setInterval(() => {
        pingTargets.forEach(target => {
          if (target.enabled) {
            performDashboardPing(target);
          }
        });
      }, pingInterval);
    }

    // Update system information
    function updateSystemInfo() {
      // Get basic system info
      fetch('/api/system-info')
        .then(response => response.json())
        .then(data => {
          // Update sidebar system info
          document.getElementById('node-version').textContent = data.nodeVersion;
          document.getElementById('platform').textContent = data.platform;
          document.getElementById('system-uptime').textContent = data.uptime;
          document.getElementById('cpu-cores').textContent = data.cpuCores + ' cores';

          // Update memory
          const memoryUsed = (data.memory.used / 1024 / 1024).toFixed(0);
          const memoryTotal = (data.memory.total / 1024 / 1024).toFixed(0);
          const memoryPercent = (data.memory.used / data.memory.total * 100).toFixed(1);

          document.getElementById('memory-used').textContent = memoryUsed + ' MB';
          document.getElementById('memory-total').textContent = memoryTotal + ' MB';
          document.getElementById('memory-bar').style.width = memoryPercent + '%';

          // Update CPU
          document.getElementById('cpu-usage').textContent = data.cpuUsage + '%';
          document.getElementById('cpu-bar').style.width = data.cpuUsage + '%';
          
          // Update header stats
          if (document.getElementById('header-cpu')) {
            document.getElementById('header-cpu').textContent = data.cpuUsage + '%';
          }
          if (document.getElementById('header-memory')) {
            const memUsedGB = (data.memory.used / 1024 / 1024 / 1024).toFixed(1);
            const memTotalGB = (data.memory.total / 1024 / 1024 / 1024).toFixed(1);
            document.getElementById('header-memory').textContent = `${memUsedGB}/${memTotalGB}GB`;
          }
          if (document.getElementById('header-storage') && data.storage) {
            const storageUsedGB = (data.storage.used / 1024 / 1024 / 1024).toFixed(1);
            const storageTotalGB = (data.storage.total / 1024 / 1024 / 1024).toFixed(1);
            document.getElementById('header-storage').textContent = `${storageUsedGB}/${storageTotalGB}GB`;
          }
        })
        .catch(err => {
          console.error('Error fetching system info:', err);
          // Fallback values
          document.getElementById('memory-total').textContent = memoryTotal + ' MB';
          document.getElementById('memory-bar').style.width = memoryPercent + '%';

          // Update CPU
          document.getElementById('cpu-usage').textContent = data.cpuUsage + '%';
          document.getElementById('cpu-bar').style.width = data.cpuUsage + '%';
        })
        .catch(err => {
          console.error('Error fetching system info:', err);
          // Fallback values
          document.getElementById('node-version').textContent = 'Unknown';
          document.getElementById('platform').textContent = 'Unknown';
          document.getElementById('system-uptime').textContent = 'Unknown';
          document.getElementById('cpu-cores').textContent = 'Unknown';
        });
    }

    // Initialize
    document.addEventListener('DOMContentLoaded', function() {
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const sidebar = document.getElementById('sidebar');
      const mobileOverlay = document.getElementById('mobile-overlay');

      // Mobile menu toggle
      mobileMenuButton.addEventListener('click', function() {
        sidebar.classList.toggle('-translate-x-full');
        mobileOverlay.classList.toggle('hidden');
      });

      // Close sidebar when clicking overlay
      mobileOverlay.addEventListener('click', function() {
        sidebar.classList.add('-translate-x-full');
        mobileOverlay.classList.add('hidden');
      });

      updateLastUpdateTime();
      updateSystemInfo();
      startDashboardPingMonitoring();

      // Update every minute
      setInterval(updateLastUpdateTime, 60000);
      setInterval(updateSystemInfo, 30000); // Update system info every 30 seconds
    });
  </script>

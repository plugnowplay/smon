<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Settings - SMon</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 text-gray-100 min-h-screen">
  <div class="flex h-screen">
    <!-- Mobile Menu Button -->
    <button id="mobile-menu-button" class="md:hidden fixed top-4 left-4 z-50 bg-slate-800 p-2 rounded-lg border border-slate-700 shadow-lg">
      <i class="fas fa-bars text-white"></i>
    </button>

    <!-- Mobile Overlay -->
    <div id="mobile-overlay" class="md:hidden fixed inset-0 bg-black bg-opacity-50 z-30 hidden"></div>

    <!-- Sidebar -->
    <div id="sidebar" class="w-64 bg-slate-950 border-r border-slate-700 shadow-xl flex flex-col fixed md:relative inset-y-0 left-0 z-40 transform -translate-x-full md:translate-x-0 transition-transform duration-300 ease-in-out">
      <!-- Header -->
      <div class="p-6 border-b border-slate-700">
        <div class="flex items-center gap-3 mb-1">
          <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg flex items-center justify-center">
            <i class="fas fa-chart-line text-white font-bold text-lg"></i>
          </div>
          <div>
            <h1 class="text-lg font-bold text-white">SMon</h1>
            <p class="text-xs text-gray-400">SNMP Monitor</p>
          </div>
        </div>
      </div>

      <!-- Navigation -->
      <nav class="flex-1 px-4 py-6 overflow-y-auto">
        <div class="space-y-2">
          <a href="/" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 hover:bg-slate-700 transition-all duration-200">
            <i class="fas fa-chart-area w-5"></i>
            <span>Dashboard</span>
          </a>
          <a href="/monitoring" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 hover:bg-slate-700 transition-all duration-200">
            <i class="fas fa-gauge-high w-5"></i>
            <span>Bandwidth Monitor</span>
          </a>
          <a href="/ping" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 hover:bg-slate-700 transition-all duration-200">
            <i class="fas fa-network-wired w-5"></i>
            <span>Ping Monitor</span>
          </a>
          <a href="/devices" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 hover:bg-slate-700 transition-all duration-200">
            <i class="fas fa-server w-5"></i>
            <span>Devices</span>
          </a>
          <a href="/settings" class="flex items-center gap-3 px-4 py-3 rounded-lg bg-gradient-to-r from-blue-600 to-blue-700 text-white font-medium transition-all hover:shadow-lg">
            <i class="fas fa-cog w-5"></i>
            <span>Settings</span>
          </a>
          <a href="/about" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 hover:bg-slate-700 transition-all duration-200">
            <i class="fas fa-info-circle w-5"></i>
            <span>About</span>
          </a>
          <a href="/logout" class="flex items-center gap-3 px-4 py-3 rounded-lg text-red-400 hover:bg-red-500/20 hover:text-red-300 transition-all duration-200 mt-4">
            <i class="fas fa-sign-out-alt w-5"></i>
            <span>Logout</span>
          </a>
        </div>
      </nav>

      <!-- Footer -->
      <div class="px-4 py-4 border-t border-slate-700">
        <div class="text-xs text-gray-500 text-center">
          <p>SNMP Monitor v2.0</p>
          <p>Network Intelligence</p>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div class="flex-1 overflow-auto">
      <!-- Top Header -->
      <div class="bg-slate-950 border-b border-slate-700 px-4 md:px-8 py-4 sticky top-0 z-10">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
          <div>
            <h2 class="text-2xl font-bold text-white">Settings</h2>
            <p class="text-gray-400 text-sm mt-1">Configure system parameters and monitoring options</p>
          </div>
          
          <!-- System Stats -->
          <div class="flex flex-wrap gap-2 text-xs">
            <div class="flex items-center gap-2 bg-slate-800 px-2 py-1.5 rounded-lg border border-slate-700">
              <i class="fas fa-microchip text-blue-400"></i>
              <span class="text-white font-semibold" id="header-cpu">--%</span>
            </div>
            <div class="flex items-center gap-2 bg-slate-800 px-2 py-1.5 rounded-lg border border-slate-700">
              <i class="fas fa-memory text-green-400"></i>
              <span class="text-white font-semibold" id="header-memory">--</span>
            </div>
            <div class="flex items-center gap-2 bg-slate-800 px-2 py-1.5 rounded-lg border border-slate-700">
              <i class="fas fa-database text-purple-400"></i>
              <span class="text-green-400 font-semibold text-xs" id="header-db"><i class="fas fa-circle"></i></span>
            </div>
            <div class="flex items-center gap-2 bg-slate-800 px-2 py-1.5 rounded-lg border border-slate-700">
              <i class="fas fa-hdd text-orange-400"></i>
              <span class="text-white font-semibold" id="header-storage">--</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Content -->
      <div class="p-8">
        <!-- Settings Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
          <!-- InfluxDB Configuration -->
          <div class="bg-slate-800 rounded-lg border border-slate-700 p-6 shadow-lg">
            <div class="flex items-start justify-between mb-6">
              <div>
                <h3 class="text-lg font-bold text-white flex items-center gap-2">
                  <i class="fas fa-database text-purple-500"></i>
                  InfluxDB Configuration
                </h3>
                <p class="text-sm text-gray-400 mt-1">Configure InfluxDB v2 connection settings</p>
              </div>
            </div>

            <div class="space-y-4">
              <!-- InfluxDB URL -->
              <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">
                  <i class="fas fa-link text-blue-400 mr-1"></i>InfluxDB URL
                </label>
                <input type="text" 
                       id="influxdb-url"
                       value="<%= settings.influxdb?.url || 'http://localhost:8086' %>"
                       placeholder="http://localhost:8086"
                       class="w-full bg-slate-700 border border-slate-600 rounded-lg px-4 py-2 text-white focus:outline-none focus:ring-2 focus:ring-purple-500">
                <p class="text-xs text-gray-500 mt-1">Full URL to your InfluxDB instance</p>
              </div>

              <!-- Organization -->
              <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">
                  <i class="fas fa-building text-blue-400 mr-1"></i>Organization
                </label>
                <input type="text" 
                       id="influxdb-org"
                       value="<%= settings.influxdb?.org || '' %>"
                       placeholder="my-org"
                       class="w-full bg-slate-700 border border-slate-600 rounded-lg px-4 py-2 text-white focus:outline-none focus:ring-2 focus:ring-purple-500">
                <p class="text-xs text-gray-500 mt-1">InfluxDB organization name</p>
              </div>

              <!-- Bucket -->
              <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">
                  <i class="fas fa-bucket text-blue-400 mr-1"></i>Bucket
                </label>
                <input type="text" 
                       id="influxdb-bucket"
                       value="<%= settings.influxdb?.bucket || '' %>"
                       placeholder="my-bucket"
                       class="w-full bg-slate-700 border border-slate-600 rounded-lg px-4 py-2 text-white focus:outline-none focus:ring-2 focus:ring-purple-500">
                <p class="text-xs text-gray-500 mt-1">Bucket name for storing metrics</p>
              </div>

              <!-- Token -->
              <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">
                  <i class="fas fa-key text-blue-400 mr-1"></i>API Token
                </label>
                <div class="relative">
                  <input type="password" 
                         id="influxdb-token"
                         value="<%= settings.influxdb?.token || '' %>"
                         placeholder="Enter your InfluxDB API token"
                         class="w-full bg-slate-700 border border-slate-600 rounded-lg px-4 py-2 pr-10 text-white focus:outline-none focus:ring-2 focus:ring-purple-500">
                  <button type="button" id="toggle-token-visibility" class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-white transition-colors">
                    <i class="fas fa-eye" id="token-eye-icon"></i>
                  </button>
                </div>
                <p class="text-xs text-gray-500 mt-1">API token with read/write permissions</p>
              </div>

              <!-- Test Connection Button -->
              <div class="flex gap-2">
                <button id="test-influxdb-btn" class="flex-1 px-4 py-2 bg-gradient-to-r from-purple-600 to-purple-700 text-white rounded-lg hover:from-purple-500 hover:to-purple-600 transition-all font-medium text-sm">
                  <i class="fas fa-plug mr-2"></i>Test Connection
                </button>
                <button id="save-influxdb-btn" class="flex-1 px-4 py-2 bg-gradient-to-r from-green-600 to-green-700 text-white rounded-lg hover:from-green-500 hover:to-green-600 transition-all font-medium text-sm">
                  <i class="fas fa-save mr-2"></i>Save
                </button>
              </div>

              <!-- Connection Status -->
              <div id="influxdb-status" class="hidden p-3 rounded-lg">
                <p id="influxdb-status-text" class="text-sm"></p>
              </div>
            </div>
          </div>

          <!-- Polling Interval Setting -->
          <div class="bg-slate-800 rounded-lg border border-slate-700 p-6 shadow-lg">
            <div class="flex items-start justify-between mb-6">
              <div>
                <h3 class="text-lg font-bold text-white flex items-center gap-2">
                  <i class="fas fa-sync-alt text-blue-500"></i>
                  Polling Interval
                </h3>
                <p class="text-gray-400 text-sm mt-2">Set how often SNMP data is collected from devices</p>
              </div>
            </div>

            <div class="space-y-4">
              <!-- Current Setting Display -->
              <div class="bg-slate-700/50 rounded-lg p-4">
                <p class="text-xs text-gray-400 mb-1">Current Interval</p>
                <div class="text-3xl font-bold text-blue-400" id="current-interval-display">
                  <%= settings.pollingInterval / 1000 %> sec
                </div>
                <p class="text-xs text-gray-500 mt-1">
                  (<%= (settings.pollingInterval / 60000).toFixed(1) %> minutes)
                </p>
              </div>

              <!-- Input Section -->
              <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">Interval (seconds)</label>
                <div class="flex gap-2">
                  <input type="number" 
                         id="polling-interval-input" 
                         min="10" 
                         step="5"
                         value="<%= settings.pollingInterval / 1000 %>"
                         class="flex-1 bg-slate-700 border border-slate-600 rounded-lg px-4 py-2 text-white focus:outline-none focus:ring-2 focus:ring-blue-500">
                  <button id="save-interval-btn" class="px-6 py-2 bg-gradient-to-r from-green-600 to-green-700 text-white rounded-lg hover:from-green-500 hover:to-green-600 transition-all font-medium">
                    <i class="fas fa-check mr-2"></i>Save
                  </button>
                </div>
                <p class="text-xs text-gray-500 mt-2">Minimum: 10 seconds | Recommended: 300 seconds (5 minutes)</p>
              </div>

              <!-- Preset Buttons -->
              <div>
                <p class="text-xs text-gray-400 mb-2">Quick Presets</p>
                <div class="grid grid-cols-2 gap-2">
                  <button class="preset-btn px-3 py-2 bg-slate-700 hover:bg-slate-600 text-white rounded-lg text-sm transition-all" data-value="30">
                    30 seconds
                  </button>
                  <button class="preset-btn px-3 py-2 bg-slate-700 hover:bg-slate-600 text-white rounded-lg text-sm transition-all" data-value="60">
                    1 minute
                  </button>
                  <button class="preset-btn px-3 py-2 bg-slate-700 hover:bg-slate-600 text-white rounded-lg text-sm transition-all" data-value="300">
                    5 minutes
                  </button>
                  <button class="preset-btn px-3 py-2 bg-slate-700 hover:bg-slate-600 text-white rounded-lg text-sm transition-all" data-value="900">
                    15 minutes
                  </button>
                </div>
              </div>
            </div>
          </div>

          <!-- System Information -->
          <div class="bg-slate-800 rounded-lg border border-slate-700 p-6 shadow-lg">
            <h3 class="text-lg font-bold text-white flex items-center gap-2 mb-6">
              <i class="fas fa-info-circle text-purple-500"></i>
              System Information
            </h3>

            <div class="space-y-4">
              <!-- Polling Info -->
              <div class="border-b border-slate-700 pb-4">
                <p class="text-gray-400 text-sm">Polling Status</p>
                <div class="flex items-center gap-2 mt-2">
                  <span class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></span>
                  <p class="font-medium text-green-400">Active</p>
                </div>
              </div>

              <!-- Interval Conversion -->
              <div class="border-b border-slate-700 pb-4">
                <p class="text-gray-400 text-sm">Interval Breakdown</p>
                <div class="mt-2 space-y-1 text-sm">
                  <p class="text-gray-300"><span class="text-gray-500">Seconds:</span> <span class="font-mono" id="info-seconds"><%= settings.pollingInterval / 1000 %></span></p>
                  <p class="text-gray-300"><span class="text-gray-500">Minutes:</span> <span class="font-mono" id="info-minutes"><%= (settings.pollingInterval / 60000).toFixed(2) %></span></p>
                  <p class="text-gray-300"><span class="text-gray-500">Polls/Hour:</span> <span class="font-mono" id="info-polls"><%= (3600 / (settings.pollingInterval / 1000)).toFixed(1) %></span></p>
                </div>
              </div>

              <!-- Description -->
              <div>
                <p class="text-gray-400 text-sm">What is Polling?</p>
                <p class="text-gray-400 text-xs mt-2 leading-relaxed">
                  Polling is the process of periodically querying SNMP devices for network statistics. 
                  Higher frequency = more data points but more network traffic. 
                  Lower frequency = less traffic but fewer data points.
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Additional Settings Section -->
        <div class="mt-6 bg-slate-800 rounded-lg border border-slate-700 p-6 shadow-lg">
          <h3 class="text-lg font-bold text-white flex items-center gap-2 mb-6">
            <i class="fas fa-sliders-h text-yellow-500"></i>
            Advanced Settings
          </h3>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Data Retention -->
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">Data Retention Policy</label>
              <div class="flex gap-2">
                <input type="number" 
                       id="data-retention-input"
                       min="1" 
                       max="365"
                       step="1"
                       value="<%= settings.dataRetention || 365 %>"
                       class="flex-1 bg-slate-700 border border-slate-600 rounded-lg px-4 py-2 text-white focus:outline-none focus:ring-2 focus:ring-blue-500">
                <span class="flex items-center text-gray-400">days</span>
                <button id="save-retention-btn" class="px-4 py-2 bg-gradient-to-r from-green-600 to-green-700 text-white rounded-lg hover:from-green-500 hover:to-green-600 transition-all font-medium text-sm">
                  <i class="fas fa-check mr-1"></i>Save
                </button>
              </div>
              <p class="text-xs text-gray-500 mt-1">How long to keep historical data (1-365 days)</p>
            </div>

            <!-- Alert Threshold -->
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">High Bandwidth Threshold</label>
              <div class="flex gap-2">
                <input type="number" 
                       value="80" 
                       min="0" 
                       max="100"
                       class="flex-1 bg-slate-700 border border-slate-600 rounded-lg px-4 py-2 text-white focus:outline-none focus:ring-2 focus:ring-blue-500" 
                       disabled>
                <span class="flex items-center text-gray-400">%</span>
              </div>
              <p class="text-xs text-gray-500 mt-1">Trigger alert when bandwidth exceeds</p>
            </div>

            <!-- Ping Interval -->
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-2">Ping Monitoring Interval</label>
              <div class="flex gap-2">
                <input type="number" 
                       id="ping-interval-input"
                       min="5" 
                       step="5"
                       value="<%= settings.pingInterval ? settings.pingInterval / 1000 : 30 %>"
                       class="flex-1 bg-slate-700 border border-slate-600 rounded-lg px-4 py-2 text-white focus:outline-none focus:ring-2 focus:ring-blue-500">
                <span class="flex items-center text-gray-400">seconds</span>
                <button id="save-ping-interval-btn" class="px-4 py-2 bg-gradient-to-r from-green-600 to-green-700 text-white rounded-lg hover:from-green-500 hover:to-green-600 transition-all font-medium text-sm">
                  <i class="fas fa-check mr-1"></i>Save
                </button>
              </div>
              <p class="text-xs text-gray-500 mt-1">How often to ping network targets (5-300 seconds)</p>
            </div>

            <!-- Ping Notifications -->
            <div class="space-y-3">
              <label class="block text-sm font-medium text-gray-300 mb-2">Ping Notifications</label>
              
              <div class="flex items-center justify-between bg-slate-700/30 rounded-lg p-3">
                <div class="flex items-center gap-3">
                  <i class="fas fa-bell text-yellow-400"></i>
                  <div>
                    <p class="text-sm font-medium text-white">Enable Notifications</p>
                    <p class="text-xs text-gray-400">Show alerts for ping failures</p>
                  </div>
                </div>
                <label class="relative inline-flex items-center cursor-pointer">
                  <input type="checkbox" id="ping-notifications-enabled" class="sr-only peer" <%= settings.pingNotifications?.enabled ? 'checked' : '' %>>
                  <div class="w-11 h-6 bg-slate-600 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-blue-500 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
                </label>
              </div>

              <div class="flex items-center justify-between bg-slate-700/30 rounded-lg p-3">
                <div class="flex items-center gap-3">
                  <i class="fas fa-exclamation-triangle text-red-400"></i>
                  <div>
                    <p class="text-sm font-medium text-white">Notify on Down</p>
                    <p class="text-xs text-gray-400">Alert when target is offline</p>
                  </div>
                </div>
                <label class="relative inline-flex items-center cursor-pointer">
                  <input type="checkbox" id="ping-notify-down" class="sr-only peer" <%= settings.pingNotifications?.notifyOnDown ? 'checked' : '' %>>
                  <div class="w-11 h-6 bg-slate-600 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-blue-500 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
                </label>
              </div>

              <div class="flex items-center justify-between bg-slate-700/30 rounded-lg p-3">
                <div class="flex items-center gap-3">
                  <i class="fas fa-clock text-orange-400"></i>
                  <div>
                    <p class="text-sm font-medium text-white">Notify on Timeout</p>
                    <p class="text-xs text-gray-400">Alert when ping times out</p>
                  </div>
                </div>
                <label class="relative inline-flex items-center cursor-pointer">
                  <input type="checkbox" id="ping-notify-timeout" class="sr-only peer" <%= settings.pingNotifications?.notifyOnTimeout ? 'checked' : '' %>>
                  <div class="w-11 h-6 bg-slate-600 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-blue-500 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
                </label>
              </div>

              <div class="flex items-center justify-between bg-slate-700/30 rounded-lg p-3">
                <div class="flex items-center gap-3">
                  <i class="fas fa-tachometer-alt text-yellow-400"></i>
                  <div>
                    <p class="text-sm font-medium text-white">Notify on High Latency</p>
                    <p class="text-xs text-gray-400">Alert when latency exceeds threshold</p>
                  </div>
                </div>
                <label class="relative inline-flex items-center cursor-pointer">
                  <input type="checkbox" id="ping-notify-high-latency" class="sr-only peer" <%= settings.pingNotifications?.notifyOnHighLatency ? 'checked' : '' %>>
                  <div class="w-11 h-6 bg-slate-600 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-blue-500 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
                </label>
              </div>

              <div class="bg-slate-700/30 rounded-lg p-3">
                <label class="block text-sm font-medium text-gray-300 mb-2">Latency Threshold</label>
                <div class="flex gap-2">
                  <input type="number" 
                         id="ping-latency-threshold"
                         min="10" 
                         step="5"
                         value="<%= settings.pingNotifications?.latencyThreshold || 50 %>"
                         class="flex-1 bg-slate-700 border border-slate-600 rounded-lg px-4 py-2 text-white focus:outline-none focus:ring-2 focus:ring-blue-500">
                  <span class="flex items-center text-gray-400">ms</span>
                </div>
                <p class="text-xs text-gray-500 mt-1">Alert when ping exceeds this value (10-500 ms)</p>
              </div>

              <button id="save-ping-notifications-btn" class="w-full px-4 py-2 bg-gradient-to-r from-green-600 to-green-700 text-white rounded-lg hover:from-green-500 hover:to-green-600 transition-all font-medium text-sm">
                <i class="fas fa-check mr-2"></i>Save Notification Settings
              </button>
            </div>
          </div>

          <!-- Divider -->
          <div class="border-t border-slate-700 my-6"></div>

          <!-- Interface Selection for Graphing -->
          <h4 class="text-md font-semibold text-white mb-4 flex items-center gap-2">
            <i class="fas fa-chart-line text-green-500"></i>
            Select Interfaces to Graph
          </h4>

          <div class="space-y-4">
            <% Object.entries(devices).forEach(([deviceId, device]) => { %>
              <div class="bg-slate-700/50 rounded-lg p-4">
                <div class="flex items-center justify-between mb-3">
                  <h5 class="font-semibold text-white flex items-center gap-2">
                    <i class="fas fa-server text-blue-400"></i>
                    <%= device.name %>
                  </h5>
                  <span class="text-xs bg-blue-600 text-white px-2 py-1 rounded">
                    <%= device.selectedInterfaces ? device.selectedInterfaces.length : 0 %> selected
                  </span>
                </div>

                <% if (device.selectedInterfaces && device.selectedInterfaces.length > 0) { %>
                  <div class="flex flex-wrap gap-2">
                    <% device.selectedInterfaces.forEach(iface => { %>
                      <%- typeof iface === 'string' ? `
                        <label class="flex items-center gap-2 bg-slate-600 hover:bg-slate-500 rounded-lg px-3 py-2 cursor-pointer transition-all">
                          <input type="checkbox" 
                                 name="interface-${deviceId}" 
                                 value="${iface}"
                                 data-device="${deviceId}"
                                 class="interface-checkbox rounded"
                                 checked>
                          <span class="text-sm text-gray-200">${iface}</span>
                        </label>
                      ` : `
                        <label class="flex items-center gap-2 bg-slate-600 hover:bg-slate-500 rounded-lg px-3 py-2 cursor-pointer transition-all">
                          <input type="checkbox" 
                                 name="interface-${deviceId}" 
                                 value="${iface.name}"
                                 data-device="${deviceId}"
                                 class="interface-checkbox rounded"
                                 checked>
                          <span class="text-sm text-gray-200">${iface.name}</span>
                        </label>
                      ` %>
                    <% }); %>
                  </div>
                  <p class="text-xs text-gray-400 mt-2">Check interfaces to include in graph monitoring</p>
                <% } else { %>
                  <p class="text-xs text-gray-500">No interfaces selected for this device</p>
                <% } %>
              </div>
            <% }); %>
          </div>

          <!-- Save Interface Selection Button -->
          <div class="mt-4">
            <button id="save-interfaces-btn" class="px-6 py-2 bg-gradient-to-r from-green-600 to-green-700 text-white rounded-lg hover:from-green-500 hover:to-green-600 transition-all font-medium">
              <i class="fas fa-save mr-2"></i>Save Interface Selection
            </button>
          </div>
        </div>

        <!-- Status Message -->
        <div id="status-message" class="hidden mt-6 p-4 rounded-lg text-sm font-medium">
          <!-- Will be populated by JavaScript -->
        </div>
      </div>
    </div>
  </div>

  <!-- Toast Notifications -->
  <div id="toast-container" class="fixed top-4 right-4 z-50 space-y-2"></div>

  <script>
    // Toast notification system
    function showToast(message, type = 'info', duration = 3000) {
      const toastContainer = document.getElementById('toast-container');

      const toast = document.createElement('div');
      toast.className = `flex items-center p-4 rounded-lg shadow-lg transform transition-all duration-300 translate-x-full max-w-sm`;

      let iconClass = '';
      let bgColor = '';

      switch(type) {
        case 'success':
          iconClass = 'fas fa-check-circle';
          bgColor = 'bg-green-500';
          break;
        case 'error':
          iconClass = 'fas fa-exclamation-circle';
          bgColor = 'bg-red-500';
          break;
        case 'warning':
          iconClass = 'fas fa-exclamation-triangle';
          bgColor = 'bg-yellow-500';
          break;
        default:
          iconClass = 'fas fa-info-circle';
          bgColor = 'bg-blue-500';
      }

      toast.classList.add(bgColor, 'text-white');

      toast.innerHTML = `
        <i class="${iconClass} mr-3"></i>
        <span class="flex-1">${message}</span>
        <button onclick="this.parentElement.remove()" class="ml-3 hover:opacity-75">
          <i class="fas fa-times"></i>
        </button>
      `;

      toastContainer.appendChild(toast);

      // Animate in
      setTimeout(() => {
        toast.classList.remove('translate-x-full');
      }, 10);

      // Auto remove
      setTimeout(() => {
        toast.classList.add('translate-x-full');
        setTimeout(() => {
          if (toast.parentElement) {
            toast.remove();
          }
        }, 300);
      }, duration);
    }

    // Initialize mobile menu
    document.addEventListener('DOMContentLoaded', function() {
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const sidebar = document.getElementById('sidebar');
      const mobileOverlay = document.getElementById('mobile-overlay');

      // Mobile menu toggle
      mobileMenuButton.addEventListener('click', function() {
        sidebar.classList.toggle('-translate-x-full');
        mobileOverlay.classList.toggle('hidden');
      });

      // Close sidebar when clicking overlay
      mobileOverlay.addEventListener('click', function() {
        sidebar.classList.add('-translate-x-full');
        mobileOverlay.classList.add('hidden');
      });
      
      // Initialize header stats
      updateHeaderStats();
      setInterval(updateHeaderStats, 10000);
    });

    function updateHeaderStats() {
      fetch('/api/system-info')
        .then(response => response.json())
        .then(data => {
          if (document.getElementById('header-cpu')) {
            document.getElementById('header-cpu').textContent = data.cpuUsage + '%';
          }
          if (document.getElementById('header-memory')) {
            const memUsedGB = (data.memory.used / 1024 / 1024 / 1024).toFixed(1);
            const memTotalGB = (data.memory.total / 1024 / 1024 / 1024).toFixed(1);
            document.getElementById('header-memory').textContent = `${memUsedGB}/${memTotalGB}GB`;
          }
          if (document.getElementById('header-storage') && data.storage) {
            const storageUsedGB = (data.storage.used / 1024 / 1024 / 1024).toFixed(1);
            const storageTotalGB = (data.storage.total / 1024 / 1024 / 1024).toFixed(1);
            document.getElementById('header-storage').textContent = `${storageUsedGB}/${storageTotalGB}GB`;
          }
        })
        .catch(err => console.error('Error fetching system info:', err));
    }

    const pollingIntervalInput = document.getElementById('polling-interval-input');
    const saveIntervalBtn = document.getElementById('save-interval-btn');
    const pingIntervalInput = document.getElementById('ping-interval-input');
    const savePingIntervalBtn = document.getElementById('save-ping-interval-btn');
    const dataRetentionInput = document.getElementById('data-retention-input');
    const saveRetentionBtn = document.getElementById('save-retention-btn');
    const saveInterfacesBtn = document.getElementById('save-interfaces-btn');
    const statusMessage = document.getElementById('status-message');
    const presetButtons = document.querySelectorAll('.preset-btn');
    const interfaceCheckboxes = document.querySelectorAll('.interface-checkbox');

    // InfluxDB elements
    const influxdbUrl = document.getElementById('influxdb-url');
    const influxdbOrg = document.getElementById('influxdb-org');
    const influxdbBucket = document.getElementById('influxdb-bucket');
    const influxdbToken = document.getElementById('influxdb-token');
    const testInfluxdbBtn = document.getElementById('test-influxdb-btn');
    const saveInfluxdbBtn = document.getElementById('save-influxdb-btn');
    const influxdbStatus = document.getElementById('influxdb-status');
    const influxdbStatusText = document.getElementById('influxdb-status-text');
    const toggleTokenVisibility = document.getElementById('toggle-token-visibility');
    const tokenEyeIcon = document.getElementById('token-eye-icon');

    // Toggle token visibility
    toggleTokenVisibility.addEventListener('click', function() {
      if (influxdbToken.type === 'password') {
        influxdbToken.type = 'text';
        tokenEyeIcon.classList.remove('fa-eye');
        tokenEyeIcon.classList.add('fa-eye-slash');
      } else {
        influxdbToken.type = 'password';
        tokenEyeIcon.classList.remove('fa-eye-slash');
        tokenEyeIcon.classList.add('fa-eye');
      }
    });

    // Test InfluxDB connection
    testInfluxdbBtn.addEventListener('click', async function() {
      const url = influxdbUrl.value.trim();
      const org = influxdbOrg.value.trim();
      const bucket = influxdbBucket.value.trim();
      const token = influxdbToken.value.trim();

      if (!url || !org || !bucket || !token) {
        showInfluxdbStatus('Please fill in all fields', 'error');
        return;
      }

      testInfluxdbBtn.disabled = true;
      testInfluxdbBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Testing...';

      try {
        const response = await fetch('/api/settings/influxdb/test', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ url, org, bucket, token })
        });

        const data = await response.json();

        if (response.ok && data.success) {
          showInfluxdbStatus('✓ Connection successful!', 'success');
        } else {
          showInfluxdbStatus('✗ Connection failed: ' + (data.error || 'Unknown error'), 'error');
        }
      } catch (err) {
        console.error('Error:', err);
        showInfluxdbStatus('✗ Connection test failed', 'error');
      } finally {
        testInfluxdbBtn.disabled = false;
        testInfluxdbBtn.innerHTML = '<i class="fas fa-plug mr-2"></i>Test Connection';
      }
    });

    // Save InfluxDB settings
    saveInfluxdbBtn.addEventListener('click', async function() {
      const url = influxdbUrl.value.trim();
      const org = influxdbOrg.value.trim();
      const bucket = influxdbBucket.value.trim();
      const token = influxdbToken.value.trim();

      if (!url || !org || !bucket || !token) {
        showInfluxdbStatus('Please fill in all fields', 'error');
        return;
      }

      saveInfluxdbBtn.disabled = true;
      saveInfluxdbBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Saving...';

      try {
        const response = await fetch('/api/settings/influxdb', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ url, org, bucket, token })
        });

        const data = await response.json();

        if (response.ok && data.success) {
          showInfluxdbStatus('✓ Settings saved successfully. Restarting...', 'success');
          setTimeout(() => {
            location.reload();
          }, 2000);
        } else {
          showInfluxdbStatus('✗ Failed to save: ' + (data.error || 'Unknown error'), 'error');
        }
      } catch (err) {
        console.error('Error:', err);
        showInfluxdbStatus('✗ Failed to save settings', 'error');
      } finally {
        saveInfluxdbBtn.disabled = false;
        saveInfluxdbBtn.innerHTML = '<i class="fas fa-save mr-2"></i>Save';
      }
    });

    function showInfluxdbStatus(message, type) {
      influxdbStatus.classList.remove('hidden');
      influxdbStatusText.textContent = message;
      
      if (type === 'success') {
        influxdbStatus.className = 'p-3 rounded-lg bg-green-600/20 border border-green-600';
        influxdbStatusText.className = 'text-sm text-green-400';
      } else {
        influxdbStatus.className = 'p-3 rounded-lg bg-red-600/20 border border-red-600';
        influxdbStatusText.className = 'text-sm text-red-400';
      }

      setTimeout(() => {
        influxdbStatus.classList.add('hidden');
      }, 5000);
    }

    // Handle preset buttons
    presetButtons.forEach(btn => {
      btn.addEventListener('click', function() {
        const value = this.getAttribute('data-value');
        pollingIntervalInput.value = value;
        updateIntervalDisplay(value);
      });
    });

    // Update display when input changes
    pollingIntervalInput.addEventListener('input', function() {
      updateIntervalDisplay(this.value);
    });

    function updateIntervalDisplay(seconds) {
      const mins = (seconds / 60).toFixed(2);
      const pollsPerHour = (3600 / seconds).toFixed(1);
      
      document.getElementById('current-interval-display').textContent = `${seconds} sec`;
      document.getElementById('info-seconds').textContent = seconds;
      document.getElementById('info-minutes').textContent = mins;
      document.getElementById('info-polls').textContent = pollsPerHour;
    }

    // Save interval
    saveIntervalBtn.addEventListener('click', async function() {
      const seconds = parseInt(pollingIntervalInput.value);

      if (!seconds || seconds < 10) {
        showStatus('Error: Interval must be at least 10 seconds', 'error');
        return;
      }

      saveIntervalBtn.disabled = true;
      saveIntervalBtn.classList.add('opacity-50');

      try {
        const response = await fetch('/api/settings', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ pollingIntervalSeconds: seconds })
        });

        if (!response.ok) {
          throw new Error('Failed to update settings');
        }

        const data = await response.json();
        showStatus(`✓ Polling interval updated to ${seconds} seconds (${(seconds/60).toFixed(1)} minutes)`, 'success');
        
        // Refresh settings after 2 seconds
        setTimeout(() => {
          location.reload();
        }, 2000);
      } catch (err) {
        console.error('Error:', err);
        showStatus('✗ Failed to update polling interval', 'error');
      } finally {
        saveIntervalBtn.disabled = false;
        saveIntervalBtn.classList.remove('opacity-50');
      }
    });

    // Save ping interval
    savePingIntervalBtn.addEventListener('click', async function() {
      const seconds = parseInt(pingIntervalInput.value);

      if (!seconds || seconds < 5) {
        showToast('Ping interval must be at least 5 seconds', 'warning');
        return;
      }

      if (seconds > 300) {
        showToast('Ping interval cannot exceed 300 seconds (5 minutes)', 'warning');
        return;
      }

      savePingIntervalBtn.disabled = true;
      savePingIntervalBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-1"></i>Saving...';

      try {
        const response = await fetch('/api/settings', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ pingIntervalSeconds: seconds })
        });

        if (!response.ok) {
          throw new Error('Failed to update settings');
        }

        const data = await response.json();
        showToast(`✓ Ping interval updated to ${seconds} seconds`, 'success');
        
        // Refresh settings after 2 seconds
        setTimeout(() => {
          location.reload();
        }, 2000);
      } catch (err) {
        console.error('Error:', err);
        showToast('✗ Failed to update ping interval', 'error');
      } finally {
        savePingIntervalBtn.disabled = false;
        savePingIntervalBtn.innerHTML = '<i class="fas fa-check mr-1"></i>Save';
      }
    });

    // Save ping notifications
    const savePingNotificationsBtn = document.getElementById('save-ping-notifications-btn');
    savePingNotificationsBtn.addEventListener('click', async function() {
      const enabled = document.getElementById('ping-notifications-enabled').checked;
      const notifyOnDown = document.getElementById('ping-notify-down').checked;
      const notifyOnTimeout = document.getElementById('ping-notify-timeout').checked;
      const notifyOnHighLatency = document.getElementById('ping-notify-high-latency').checked;
      const latencyThreshold = parseInt(document.getElementById('ping-latency-threshold').value);

      if (!latencyThreshold || latencyThreshold < 10 || latencyThreshold > 500) {
        showToast('Latency threshold must be between 10 and 500 ms', 'warning');
        return;
      }

      savePingNotificationsBtn.disabled = true;
      savePingNotificationsBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Saving...';

      try {
        const response = await fetch('/api/settings/ping-notifications', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ 
            enabled,
            notifyOnDown,
            notifyOnTimeout,
            notifyOnHighLatency,
            latencyThreshold
          })
        });

        if (!response.ok) {
          throw new Error('Failed to update notification settings');
        }

        showToast('✓ Notification settings saved successfully', 'success');
        
        setTimeout(() => {
          location.reload();
        }, 1500);
      } catch (err) {
        console.error('Error:', err);
        showToast('✗ Failed to save notification settings', 'error');
      } finally {
        savePingNotificationsBtn.disabled = false;
        savePingNotificationsBtn.innerHTML = '<i class="fas fa-check mr-2"></i>Save Notification Settings';
      }
    });

    // Save data retention
    saveRetentionBtn.addEventListener('click', async function() {
      const days = parseInt(dataRetentionInput.value);

      if (!days || days < 1 || days > 365) {
        showStatus('Error: Data retention must be between 1 and 365 days', 'error');
        return;
      }

      saveRetentionBtn.disabled = true;
      saveRetentionBtn.classList.add('opacity-50');

      try {
        const response = await fetch('/api/settings', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ dataRetentionDays: days })
        });

        if (!response.ok) {
          throw new Error('Failed to update settings');
        }

        const data = await response.json();
        showStatus(`✓ Data retention updated to ${days} days`, 'success');
        
        // Refresh settings after 2 seconds
        setTimeout(() => {
          location.reload();
        }, 2000);
      } catch (err) {
        console.error('Error:', err);
        showStatus('✗ Failed to update data retention', 'error');
      } finally {
        saveRetentionBtn.disabled = false;
        saveRetentionBtn.classList.remove('opacity-50');
      }
    });

    // Save interface selection
    saveInterfacesBtn.addEventListener('click', async function() {
      const selectedByDevice = {};
      
      // Group checked interfaces by device
      interfaceCheckboxes.forEach(checkbox => {
        const deviceId = checkbox.getAttribute('data-device');
        if (!selectedByDevice[deviceId]) {
          selectedByDevice[deviceId] = [];
        }
        if (checkbox.checked) {
          selectedByDevice[deviceId].push(checkbox.value);
        }
      });

      // Check if at least one interface is selected
      const totalSelected = Object.values(selectedByDevice).reduce((sum, arr) => sum + arr.length, 0);
      if (totalSelected === 0) {
        showStatus('Error: Please select at least one interface', 'error');
        return;
      }

      saveInterfacesBtn.disabled = true;
      saveInterfacesBtn.classList.add('opacity-50');

      try {
        // Save each device's interface selection
        const promises = Object.entries(selectedByDevice).map(([deviceId, interfaces]) =>
          fetch(`/api/devices/${deviceId}/select-interfaces`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ selectedInterfaces: interfaces })
          })
        );

        const responses = await Promise.all(promises);
        const allSuccess = responses.every(r => r.ok);

        if (!allSuccess) {
          throw new Error('Some updates failed');
        }

        showStatus(`✓ Interface selection updated! ${totalSelected} interfaces selected for graphing`, 'success');
        
        // Refresh after 2 seconds
        setTimeout(() => {
          location.reload();
        }, 2000);
      } catch (err) {
        console.error('Error:', err);
        showStatus('✗ Failed to save interface selection', 'error');
      } finally {
        saveInterfacesBtn.disabled = false;
        saveInterfacesBtn.classList.remove('opacity-50');
      }
    });

    function showStatus(message, type) {
      statusMessage.textContent = message;
      statusMessage.classList.remove('hidden');
      
      if (type === 'success') {
        statusMessage.className = 'fixed top-4 right-4 bg-green-600 text-white px-6 py-3 rounded-lg shadow-lg';
      } else {
        statusMessage.className = 'fixed top-4 right-4 bg-red-600 text-white px-6 py-3 rounded-lg shadow-lg';
      }

      setTimeout(() => {
        statusMessage.classList.add('hidden');
      }, 5000);
    }
  </script>
</body>

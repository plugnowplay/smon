<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ping Monitoring - SMon</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/luxon@3.4.4/build/global/luxon.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-luxon@1.3.1/dist/chartjs-adapter-luxon.umd.min.js"></script>
</head>
<body class="bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 text-gray-100 min-h-screen">
    <div class="flex h-screen">
        <!-- Mobile Menu Button -->
        <button id="mobile-menu-button" class="md:hidden fixed top-4 left-4 z-50 bg-gradient-to-br from-slate-800 to-slate-900 p-3 rounded-xl border border-slate-700/50 shadow-xl hover:shadow-2xl hover:border-slate-600/70 transition-all duration-300 group">
            <i class="fas fa-bars text-white group-hover:scale-110 transition-transform duration-200"></i>
        </button>

        <!-- Mobile Overlay -->
        <div id="mobile-overlay" class="md:hidden fixed inset-0 bg-black bg-opacity-60 backdrop-blur-sm z-30 hidden"></div>

        <!-- Sidebar -->
        <div id="sidebar" class="w-64 bg-gradient-to-b from-slate-950 to-slate-900 border-r border-slate-700/50 shadow-2xl flex flex-col fixed md:relative inset-y-0 left-0 z-40 transform -translate-x-full md:translate-x-0 transition-all duration-300 ease-in-out">
            <!-- Header -->
            <div class="p-6 border-b border-slate-700/50 bg-gradient-to-r from-slate-900/50 to-slate-800/50">
                <div class="flex items-center gap-3 mb-1">
                    <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center shadow-lg hover:shadow-xl transition-all duration-300 group">
                        <i class="fas fa-chart-line text-white font-bold text-lg group-hover:scale-110 transition-transform duration-200"></i>
                    </div>
                    <div>
                        <h1 class="text-lg font-bold text-white">SMon</h1>
                        <p class="text-xs text-gray-400">SNMP Monitor</p>
                    </div>
                </div>
            </div>

            <!-- Navigation -->
            <nav class="flex-1 px-4 py-6 overflow-y-auto">
                <div class="space-y-2">
                    <a href="/" class="flex items-center gap-3 px-4 py-3 rounded-xl text-gray-300 hover:bg-gradient-to-r hover:from-slate-700 hover:to-slate-800 hover:text-white transition-all duration-300 hover:shadow-lg hover:scale-[1.02] group">
                        <i class="fas fa-chart-area w-5 group-hover:scale-110 transition-transform duration-200"></i>
                        <span>Dashboard</span>
                    </a>
                    <a href="/monitoring" class="flex items-center gap-3 px-4 py-3 rounded-xl text-gray-300 hover:bg-gradient-to-r hover:from-slate-700 hover:to-slate-800 hover:text-white transition-all duration-300 hover:shadow-lg hover:scale-[1.02] group">
                        <i class="fas fa-gauge-high w-5 group-hover:scale-110 transition-transform duration-200"></i>
                        <span>Bandwidth Monitor</span>
                    </a>
                    <a href="/ping" class="flex items-center gap-3 px-4 py-3 rounded-xl bg-gradient-to-r from-blue-600 to-blue-700 text-white font-medium transition-all hover:shadow-lg hover:shadow-blue-500/25 hover:scale-[1.02] group">
                        <i class="fas fa-network-wired w-5 group-hover:scale-110 transition-transform duration-200"></i>
                        <span>Ping Monitor</span>
                    </a>
                    <a href="/devices" class="flex items-center gap-3 px-4 py-3 rounded-xl text-gray-300 hover:bg-gradient-to-r hover:from-slate-700 hover:to-slate-800 hover:text-white transition-all duration-300 hover:shadow-lg hover:scale-[1.02] group">
                        <i class="fas fa-server w-5 group-hover:scale-110 transition-transform duration-200"></i>
                        <span>Devices</span>
                    </a>
                    <a href="/settings" class="flex items-center gap-3 px-4 py-3 rounded-xl text-gray-300 hover:bg-gradient-to-r hover:from-slate-700 hover:to-slate-800 hover:text-white transition-all duration-300 hover:shadow-lg hover:scale-[1.02] group">
                        <i class="fas fa-cog w-5 group-hover:scale-110 transition-transform duration-200"></i>
                        <span>Settings</span>
                    </a>
                    <a href="/about" class="flex items-center gap-3 px-4 py-3 rounded-xl text-gray-300 hover:bg-gradient-to-r hover:from-slate-700 hover:to-slate-800 hover:text-white transition-all duration-300 hover:shadow-lg hover:scale-[1.02] group">
                        <i class="fas fa-info-circle w-5 group-hover:scale-110 transition-transform duration-200"></i>
                        <span>About</span>
                    </a>
                    <a href="/logout" class="flex items-center gap-3 px-4 py-3 rounded-xl text-red-400 hover:bg-gradient-to-r hover:from-red-500/20 hover:to-red-600/20 hover:text-red-300 transition-all duration-300 hover:shadow-lg hover:scale-[1.02] mt-4 group">
                        <i class="fas fa-sign-out-alt w-5 group-hover:scale-110 transition-transform duration-200"></i>
                        <span>Logout</span>
                    </a>
                </div>
            </nav>

            <!-- Footer -->
            <div class="px-4 py-4 border-t border-slate-700/50 bg-gradient-to-r from-slate-900/30 to-slate-800/30">
                <div class="text-xs text-gray-500 text-center">
                    <p class="font-medium">SNMP Monitor v2.0</p>
                    <p class="text-gray-600">Network Intelligence</p>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="flex-1 overflow-auto md:ml-0">
            <!-- Top Header -->
            <div class="bg-gradient-to-r from-slate-950 to-slate-900 border-b border-slate-700/50 px-4 md:px-8 py-4 sticky top-0 z-20 shadow-xl">
                <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
                    <div>
                        <h2 class="text-2xl font-bold text-white flex items-center gap-3">
                            <div class="w-8 h-8 bg-gradient-to-br from-purple-500 to-purple-600 rounded-lg flex items-center justify-center shadow-lg">
                                <i class="fas fa-network-wired text-white text-sm"></i>
                            </div>
                            Ping Monitoring
                        </h2>
                        <p class="text-gray-400 text-sm mt-1">Monitor Network Connectivity & Latency</p>
                    </div>
                    
                    <div class="flex flex-wrap items-center gap-3">
                        <!-- System Stats -->
                        <div class="flex flex-wrap gap-3 text-xs">
                            <div class="flex items-center gap-2 bg-gradient-to-br from-slate-800 to-slate-900 px-3 py-2 rounded-xl border border-slate-700/50 hover:border-blue-500/40 hover:shadow-lg hover:shadow-blue-500/20 transition-all duration-300 hover:scale-105 group">
                                <div class="w-6 h-6 bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg flex items-center justify-center shadow-md group-hover:shadow-lg group-hover:scale-110 transition-all duration-200">
                                    <i class="fas fa-microchip text-white text-xs"></i>
                                </div>
                                <div>
                                    <p class="text-gray-400 font-medium">CPU</p>
                                    <p class="text-white font-semibold" id="header-cpu">--%</p>
                                </div>
                            </div>
                            <div class="flex items-center gap-2 bg-gradient-to-br from-slate-800 to-slate-900 px-3 py-2 rounded-xl border border-slate-700/50 hover:border-green-500/40 hover:shadow-lg hover:shadow-green-500/20 transition-all duration-300 hover:scale-105 group">
                                <div class="w-6 h-6 bg-gradient-to-br from-green-500 to-green-600 rounded-lg flex items-center justify-center shadow-md group-hover:shadow-lg group-hover:scale-110 transition-all duration-200">
                                    <i class="fas fa-memory text-white text-xs"></i>
                                </div>
                                <div>
                                    <p class="text-gray-400 font-medium">Memory</p>
                                    <p class="text-white font-semibold" id="header-memory">--</p>
                                </div>
                            </div>
                            <div class="flex items-center gap-2 bg-gradient-to-br from-slate-800 to-slate-900 px-3 py-2 rounded-xl border border-slate-700/50 hover:border-purple-500/40 hover:shadow-lg hover:shadow-purple-500/20 transition-all duration-300 hover:scale-105 group">
                                <div class="w-6 h-6 bg-gradient-to-br from-purple-500 to-purple-600 rounded-lg flex items-center justify-center shadow-md group-hover:shadow-lg group-hover:scale-110 transition-all duration-200">
                                    <i class="fas fa-database text-white text-xs"></i>
                                </div>
                                <div>
                                    <p class="text-gray-400 font-medium">Database</p>
                                    <p class="text-green-400 font-semibold" id="header-db"><i class="fas fa-circle text-xs"></i> Online</p>
                                </div>
                            </div>
                            <div class="flex items-center gap-2 bg-gradient-to-br from-slate-800 to-slate-900 px-3 py-2 rounded-xl border border-slate-700/50 hover:border-orange-500/40 hover:shadow-lg hover:shadow-orange-500/20 transition-all duration-300 hover:scale-105 group">
                                <div class="w-6 h-6 bg-gradient-to-br from-orange-500 to-orange-600 rounded-lg flex items-center justify-center shadow-md group-hover:shadow-lg group-hover:scale-110 transition-all duration-200">
                                    <i class="fas fa-hdd text-white text-xs"></i>
                                </div>
                                <div>
                                    <p class="text-gray-400 font-medium">Storage</p>
                                    <p class="text-white font-semibold" id="header-storage">--</p>
                                </div>
                            </div>
                        </div>
                        
                        <button onclick="showAddTargetModal()" class="bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white px-4 py-2 rounded-xl font-medium transition-all shadow-lg hover:shadow-xl hover:shadow-blue-500/25 hover:scale-105">
                            <i class="fas fa-plus mr-2"></i>Add Target
                        </button>
                    </div>
                </div>
            </div>

            <!-- Content -->
            <div class="p-4 md:p-8">
                <!-- Ping Targets by Group -->
                <% Object.keys(groupedTargets).forEach(group => { %>
                <div class="mb-6 md:mb-8">
                    <h3 class="text-lg md:text-xl font-semibold text-white mb-4 md:mb-6 flex items-center">
                        <i class="fas fa-folder mr-3 text-blue-400"></i>
                        <%= group %>
                    </h3>
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6">
                        <% groupedTargets[group].forEach(target => { %>
                        <div class="bg-gradient-to-br from-slate-800 to-slate-900 rounded-xl border border-slate-700/50 p-4 md:p-6 shadow-xl hover:shadow-2xl transition-all duration-300 hover:border-slate-600/70">
                            <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start mb-4 gap-3">
                                <div class="flex-1 min-w-0">
                                    <h4 class="text-base md:text-lg font-semibold text-white mb-1 truncate"><%= target.name %></h4>
                                    <p class="text-gray-400 text-sm truncate"><%= target.host %></p>
                                </div>
                                <div class="flex items-center space-x-2 flex-shrink-0">
                                    <span id="status-<%= target.id %>" class="inline-flex items-center px-3 py-1.5 rounded-full text-xs font-medium shadow-md">
                                        <i class="fas fa-spinner fa-spin mr-1"></i>Checking...
                                    </span>
                                    <div class="flex space-x-1">
                                        <button onclick="toggleTarget(<%= target.id %>)" class="text-gray-400 hover:text-gray-300 transition-all duration-200 p-2 rounded-lg hover:bg-slate-700/50 hover:scale-110" title="<%= target.enabled ? 'Disable' : 'Enable' %>">
                                            <i class="fas fa-<%= target.enabled ? 'toggle-on' : 'toggle-off' %> text-sm"></i>
                                        </button>
                                        <button onclick="deleteTarget(<%= target.id %>)" class="text-red-400 hover:text-red-300 transition-all duration-200 p-2 rounded-lg hover:bg-red-500/20 hover:scale-110" title="Delete">
                                            <i class="fas fa-trash text-xs"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <div class="space-y-3 md:space-y-4">
                                <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 md:gap-4">
                                    <div class="bg-gradient-to-br from-slate-700 to-slate-800 rounded-xl p-4 border border-slate-600/30 hover:border-blue-500/30 transition-all duration-300 hover:shadow-lg hover:scale-[1.02]">
                                        <div class="flex items-center justify-between">
                                            <span class="text-xs text-gray-400 font-medium">Latency</span>
                                            <div class="w-6 h-6 bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg flex items-center justify-center shadow-md">
                                                <i class="fas fa-clock text-white text-xs"></i>
                                            </div>
                                        </div>
                                        <p id="latency-<%= target.id %>" class="text-lg font-bold text-white mt-2">-- ms</p>
                                    </div>
                                    <div class="bg-gradient-to-br from-slate-700 to-slate-800 rounded-xl p-4 border border-slate-600/30 hover:border-yellow-500/30 transition-all duration-300 hover:shadow-lg hover:scale-[1.02]">
                                        <div class="flex items-center justify-between">
                                            <span class="text-xs text-gray-400 font-medium">Packet Loss</span>
                                            <div class="w-6 h-6 bg-gradient-to-br from-yellow-500 to-yellow-600 rounded-lg flex items-center justify-center shadow-md">
                                                <i class="fas fa-exclamation-triangle text-white text-xs"></i>
                                            </div>
                                        </div>
                                        <p id="packetloss-<%= target.id %>" class="text-lg font-bold text-white mt-2">-- %</p>
                                    </div>
                                </div>
                                <div class="bg-gradient-to-br from-slate-700 to-slate-800 rounded-xl p-4 border border-slate-600/30 hover:border-purple-500/30 transition-all duration-300 hover:shadow-lg hover:scale-[1.02]">
                                    <div class="flex items-center justify-between">
                                        <span class="text-xs text-gray-400 font-medium">Jitter</span>
                                        <div class="w-6 h-6 bg-gradient-to-br from-purple-500 to-purple-600 rounded-lg flex items-center justify-center shadow-md">
                                            <i class="fas fa-wave-square text-white text-xs"></i>
                                        </div>
                                    </div>
                                    <p id="jitter-<%= target.id %>" class="text-lg font-bold text-white mt-2">-- ms</p>
                                </div>
                            </div>

                            <div class="mt-4">
                                <button onclick="pingTarget(<%= target.id %>)" class="w-full bg-slate-700 hover:bg-slate-600 text-white px-3 py-2 rounded-lg text-sm font-medium transition-all">
                                    <i class="fas fa-play mr-2"></i>Test Now
                                </button>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>
                <% }); %>

                <!-- Empty State -->
                <% if (Object.keys(groupedTargets).length === 0) { %>
                <div class="text-center py-8 md:py-12">
                    <div class="w-20 h-20 md:w-24 md:h-24 bg-gradient-to-br from-slate-800 to-slate-900 rounded-full flex items-center justify-center mx-auto mb-4 border border-slate-700/50 shadow-xl">
                        <i class="fas fa-network-wired text-3xl md:text-4xl text-gray-400"></i>
                    </div>
                    <h3 class="text-lg md:text-xl font-semibold text-white mb-2">No Ping Targets</h3>
                    <p class="text-gray-400 mb-4 md:mb-6 text-sm md:text-base px-4">Add your first ping target to start monitoring network connectivity.</p>
                    <button onclick="showAddTargetModal()" class="bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white px-4 md:px-6 py-2 md:py-3 rounded-xl font-medium transition-all shadow-lg hover:shadow-xl hover:shadow-blue-500/25 hover:scale-105">
                        <i class="fas fa-plus mr-2"></i>Add First Target
                    </button>
                </div>
                <% } %>

                <!-- Ping Charts Section -->
                <div class="mt-8">
                    <div class="bg-gradient-to-br from-slate-800 to-slate-900 rounded-xl border border-slate-700/50 shadow-xl p-6 hover:shadow-2xl transition-all duration-300">
                        <div class="flex flex-col md:flex-row md:justify-between md:items-center mb-6 gap-4">
                            <h2 class="text-xl font-semibold text-white flex items-center">
                                <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg flex items-center justify-center mr-3 shadow-lg">
                                    <i class="fas fa-chart-line text-white text-sm"></i>
                                </div>
                                Ping Latency Charts
                            </h2>
                            <div class="flex flex-col sm:flex-row items-start sm:items-center gap-3">
                                <div class="flex items-center gap-2">
                                    <label class="text-sm text-gray-400">Time Range:</label>
                                    <select id="timeRangeFilter" class="bg-slate-700 text-white px-3 py-2 rounded-lg text-sm border border-slate-600 focus:outline-none focus:ring-2 focus:ring-blue-500">
                                        <option value="1h" selected>Last Hour</option>
                                        <option value="6h">Last 6 Hours</option>
                                        <option value="24h">Last 24 Hours</option>
                                        <option value="7d">Last 7 Days</option>
                                        <option value="30d">Last 30 Days</option>
                                        <option value="all">All Time</option>
                                    </select>
                                </div>
                                <button onclick="refreshCharts()" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-all shadow-lg hover:shadow-xl">
                                    <i class="fas fa-sync-alt mr-2"></i>Refresh
                                </button>
                            </div>
                        </div>
                        <div id="charts-container" class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                            <!-- Charts will be dynamically added here -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Target Modal -->
    <div id="addTargetModal" class="fixed inset-0 bg-black bg-opacity-60 backdrop-blur-sm overflow-y-auto h-full w-full z-50 hidden">
        <div class="relative top-4 md:top-20 mx-auto p-4 md:p-5 border border-slate-700/50 w-full max-w-sm md:max-w-md shadow-2xl rounded-xl bg-gradient-to-br from-slate-800 to-slate-900">
            <div class="mt-3">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-lg font-medium text-white">Add Ping Target</h3>
                    <button onclick="hideAddTargetModal()" class="text-gray-400 hover:text-white p-2 rounded-lg hover:bg-slate-700/50 transition-all duration-200 hover:scale-110">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <form id="addTargetForm" onsubmit="addTarget(event)">
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-300 mb-2">Name</label>
                        <input type="text" id="targetName" required class="w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    </div>
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-300 mb-2">Host/IP</label>
                        <input type="text" id="targetHost" required placeholder="e.g., 8.8.8.8 or google.com" class="w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    </div>
                    <div class="mb-6">
                        <label class="block text-sm font-medium text-gray-300 mb-2">Group</label>
                        <input type="text" id="targetGroup" required placeholder="e.g., DNS, Network, Servers" class="w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    </div>
                    <div class="flex flex-col sm:flex-row justify-end space-y-2 sm:space-y-0 sm:space-x-3">
                        <button type="button" onclick="hideAddTargetModal()" class="px-4 py-2 text-gray-300 bg-slate-700 rounded-lg hover:bg-slate-600 transition-all order-2 sm:order-1">Cancel</button>
                        <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-all order-1 sm:order-2">Add Target</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Toast Notifications -->
    <div id="toast-container" class="fixed top-4 left-4 right-4 md:left-auto md:right-4 md:max-w-sm z-50 space-y-2"></div>

    <script>
        // Mobile Menu Script
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileOverlay = document.getElementById('mobile-overlay');
        const sidebar = document.getElementById('sidebar');

        mobileMenuButton.addEventListener('click', () => {
          sidebar.classList.toggle('-translate-x-full');
          mobileOverlay.classList.toggle('hidden');
        });

        mobileOverlay.addEventListener('click', () => {
          sidebar.classList.add('-translate-x-full');
          mobileOverlay.classList.add('hidden');
        });

        // Toast notification system
        function showToast(message, type = 'info', duration = 3000) {
            const toastContainer = document.getElementById('toast-container');

      const toast = document.createElement('div');
      toast.className = `flex items-center p-4 rounded-lg shadow-lg transform transition-all duration-300 translate-x-full md:translate-x-full max-w-full md:max-w-sm`;            let iconClass = '';
            let bgColor = '';

            switch(type) {
                case 'success':
                    iconClass = 'fas fa-check-circle';
                    bgColor = 'bg-green-500';
                    break;
                case 'error':
                    iconClass = 'fas fa-exclamation-circle';
                    bgColor = 'bg-red-500';
                    break;
                case 'warning':
                    iconClass = 'fas fa-exclamation-triangle';
                    bgColor = 'bg-yellow-500';
                    break;
                default:
                    iconClass = 'fas fa-info-circle';
                    bgColor = 'bg-blue-500';
            }

            toast.classList.add(bgColor, 'text-white');

            toast.innerHTML = `
                <i class="${iconClass} mr-3"></i>
                <span class="flex-1">${message}</span>
                <button onclick="this.parentElement.remove()" class="ml-3 hover:opacity-75">
                    <i class="fas fa-times"></i>
                </button>
            `;

            toastContainer.appendChild(toast);

            // Animate in
            setTimeout(() => {
                toast.classList.remove('translate-x-full');
            }, 10);

            // Auto remove
            setTimeout(() => {
                toast.classList.add('translate-x-full');
                setTimeout(() => {
                    if (toast.parentElement) {
                        toast.remove();
                    }
                }, 300);
            }, duration);
        }

        let pingHistory = {};
        let pingCharts = {};
        let chartData = {};
        let notificationSettings = {
            enabled: <%= settings.pingNotifications?.enabled ? 'true' : 'false' %>,
            notifyOnDown: <%= settings.pingNotifications?.notifyOnDown ? 'true' : 'false' %>,
            notifyOnTimeout: <%= settings.pingNotifications?.notifyOnTimeout ? 'true' : 'false' %>,
            notifyOnHighLatency: <%= settings.pingNotifications?.notifyOnHighLatency ? 'true' : 'false' %>,
            latencyThreshold: <%= settings.pingNotifications?.latencyThreshold || 50 %>
        };

        // Initialize ping monitoring
        document.addEventListener('DOMContentLoaded', function() {
            initializeCharts();
            startPingMonitoring();
            updateHeaderStats();
            
            // Update header stats every 10 seconds
            setInterval(updateHeaderStats, 10000);
            
            // Add event listener for time range filter
            document.getElementById('timeRangeFilter').addEventListener('change', function() {
                refreshCharts();
            });
        });

        function updateHeaderStats() {
            fetch('/api/system-info')
                .then(response => response.json())
                .then(data => {
                    if (document.getElementById('header-cpu')) {
                        document.getElementById('header-cpu').textContent = data.cpuUsage + '%';
                    }
                    if (document.getElementById('header-memory')) {
                        const memUsedGB = (data.memory.used / 1024 / 1024 / 1024).toFixed(1);
                        const memTotalGB = (data.memory.total / 1024 / 1024 / 1024).toFixed(1);
                        document.getElementById('header-memory').textContent = `${memUsedGB}/${memTotalGB}GB`;
                    }
                    if (document.getElementById('header-storage') && data.storage) {
                        const storageUsedGB = (data.storage.used / 1024 / 1024 / 1024).toFixed(1);
                        const storageTotalGB = (data.storage.total / 1024 / 1024 / 1024).toFixed(1);
                        document.getElementById('header-storage').textContent = `${storageUsedGB}/${storageTotalGB}GB`;
                    }
                })
                .catch(err => console.error('Error fetching system info:', err));
        }

        function getTimeRangeFilter() {
            const filter = document.getElementById('timeRangeFilter').value;
            const now = new Date();
            let startDate = null;
            
            switch(filter) {
                case '1h':
                    startDate = new Date(now.getTime() - 60 * 60 * 1000);
                    break;
                case '6h':
                    startDate = new Date(now.getTime() - 6 * 60 * 60 * 1000);
                    break;
                case '24h':
                    startDate = new Date(now.getTime() - 24 * 60 * 60 * 1000);
                    break;
                case '7d':
                    startDate = new Date(now.getTime() - 7 * 24 * 60 * 60 * 1000);
                    break;
                case '30d':
                    startDate = new Date(now.getTime() - 30 * 24 * 60 * 60 * 1000);
                    break;
                case 'all':
                    startDate = null;
                    break;
            }
            
            return startDate;
        }

        async function loadHistoricalData(targetId) {
            try {
                const startDate = getTimeRangeFilter();
                let url = `/api/ping-history/${targetId}`;
                
                if (startDate) {
                    url += `?startDate=${startDate.toISOString()}`;
                }
                
                const response = await fetch(url);
                const result = await response.json();
                
                if (result.success && result.data) {
                    return result.data;
                }
                return [];
            } catch (error) {
                console.error('Error loading historical data:', error);
                return [];
            }
        }

        function refreshCharts() {
            // Destroy existing charts
            Object.keys(pingCharts).forEach(targetId => {
                if (pingCharts[targetId]) {
                    pingCharts[targetId].destroy();
                }
            });
            
            // Clear chart data
            pingCharts = {};
            chartData = {};
            
            // Clear container
            document.getElementById('charts-container').innerHTML = '';
            
            // Reinitialize with new filter
            initializeCharts();
        }

        function initializeCharts() {
            // Get all targets and create charts for them
            fetch('/api/ping-targets')
                .then(response => response.json())
                .then(async targets => {
                    const chartsContainer = document.getElementById('charts-container');
                    chartsContainer.innerHTML = ''; // Clear existing charts

                    for (const target of targets) {
                        await createChartForTarget(target);
                    }
                })
                .catch(error => console.error('Error initializing charts:', error));
        }

        async function createChartForTarget(target) {
            const chartContainer = document.createElement('div');
            chartContainer.className = 'bg-slate-700 rounded-lg p-4';
            chartContainer.innerHTML = `
                <h3 class="text-lg font-semibold text-white mb-3">${target.name} (${target.host})</h3>
                <div style="position: relative; height: 250px;">
                    <canvas id="chart-${target.id}"></canvas>
                </div>
            `;

            document.getElementById('charts-container').appendChild(chartContainer);

            const ctx = document.getElementById(`chart-${target.id}`).getContext('2d');

            // Load historical data
            const historicalData = await loadHistoricalData(target.id);
            
            // Initialize chart data with historical data
            chartData[target.id] = {
                labels: historicalData.map(d => new Date(d.timestamp)),
                data: historicalData.map(d => d.alive ? parseFloat(d.time) : null)
            };

            pingCharts[target.id] = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: chartData[target.id].labels,
                    datasets: [{
                        label: 'Latency (ms)',
                        data: chartData[target.id].data,
                        borderColor: target.enabled ? '#3b82f6' : '#6b7280',
                        backgroundColor: target.enabled ? 'rgba(59, 130, 246, 0.1)' : 'rgba(107, 114, 128, 0.1)',
                        borderWidth: 2,
                        fill: true,
                        tension: 0.4,
                        pointRadius: 3,
                        pointHoverRadius: 5
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        x: {
                            type: 'time',
                            time: {
                                unit: 'minute',
                                stepSize: 1,
                                displayFormats: {
                                    minute: 'HH:mm',
                                    second: 'HH:mm:ss'
                                },
                                tooltipFormat: 'HH:mm:ss'
                            },
                            grid: {
                                color: 'rgba(148, 163, 184, 0.1)'
                            },
                            ticks: {
                                color: '#94a3b8',
                                maxRotation: 0,
                                autoSkip: true,
                                maxTicksLimit: 10
                            }
                        },
                        y: {
                            beginAtZero: true,
                            suggestedMin: 0,
                            suggestedMax: 100,
                            grid: {
                                color: 'rgba(148, 163, 184, 0.1)'
                            },
                            ticks: {
                                color: '#94a3b8',
                                callback: function(value) {
                                    return value + 'ms';
                                }
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            labels: {
                                color: '#e2e8f0'
                            }
                        }
                    },
                    interaction: {
                        intersect: false,
                        mode: 'index'
                    }
                }
            });
        }

        function addDataPointToChart(targetId, latency) {
            if (!chartData[targetId] || !pingCharts[targetId]) return;

            const now = new Date();
            const maxDataPoints = 30; // Keep last 30 data points

            // Add new data point (handle null for offline targets)
            chartData[targetId].labels.push(now);
            chartData[targetId].data.push(latency !== null ? latency : null);

            // Remove old data points if we exceed the limit
            if (chartData[targetId].labels.length > maxDataPoints) {
                chartData[targetId].labels.shift();
                chartData[targetId].data.shift();
            }

            // Update Y-axis scale dynamically based on data
            const validData = chartData[targetId].data.filter(d => d !== null);
            if (validData.length > 0) {
                const maxLatency = Math.max(...validData);
                const minLatency = Math.min(...validData);
                pingCharts[targetId].options.scales.y.suggestedMax = Math.max(100, maxLatency * 1.2);
                pingCharts[targetId].options.scales.y.suggestedMin = Math.max(0, minLatency * 0.8);
            }

            // Update chart
            pingCharts[targetId].update('none'); // Update without animation for performance
        }

        function startPingMonitoring() {
            // Ping all enabled targets every configured interval
            const pingCheckInterval = <%= settings.pingInterval || 30000 %>;
            setInterval(() => {
                pingAllTargets();
            }, pingCheckInterval);

            // Initial ping
            pingAllTargets();
        }

        async function pingAllTargets() {
            const response = await fetch('/api/ping-targets');
            const targets = await response.json();

            targets.filter(target => target.enabled).forEach(target => {
                pingTarget(target.id, false); // Silent ping
            });
        }

        async function pingTarget(targetId, showAlert = true) {
            const statusElement = document.getElementById(`status-${targetId}`);
            const latencyElement = document.getElementById(`latency-${targetId}`);
            const packetLossElement = document.getElementById(`packetloss-${targetId}`);
            const jitterElement = document.getElementById(`jitter-${targetId}`);

            // Set loading state
            statusElement.innerHTML = '<i class="fas fa-spinner fa-spin mr-1"></i>Pinging...';
            statusElement.className = 'inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-900 text-yellow-200';

            try {
                const response = await fetch('/api/ping-targets');
                const targets = await response.json();
                const target = targets.find(t => t.id === targetId);

                if (!target) return;

                const pingResponse = await fetch('/api/ping-test', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ host: target.host, targetId: targetId })
                });

                const result = await pingResponse.json();

                if (result.success) {
                    // Update status
                    if (result.alive) {
                        statusElement.innerHTML = '<i class="fas fa-check-circle mr-1"></i>Online';
                        statusElement.className = 'inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-900 text-green-200';
                    } else {
                        statusElement.innerHTML = '<i class="fas fa-times-circle mr-1"></i>Offline';
                        statusElement.className = 'inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-900 text-red-200';
                    }

                    // Update metrics
                    latencyElement.textContent = result.time !== 'unknown' ? `${result.time} ms` : '-- ms';
                    packetLossElement.textContent = `${result.packetLoss}%`;

                    // Add data point to chart
                    addDataPointToChart(targetId, result.time !== 'unknown' ? parseFloat(result.time) : null);

                    // Calculate jitter (simplified)
                    if (!pingHistory[targetId]) {
                        pingHistory[targetId] = [];
                    }
                    pingHistory[targetId].push(result.time !== 'unknown' ? parseFloat(result.time) : 0);

                    // Keep only last 5 measurements
                    if (pingHistory[targetId].length > 5) {
                        pingHistory[targetId].shift();
                    }

                    // Calculate jitter
                    if (pingHistory[targetId].length > 1) {
                        const variations = [];
                        for (let i = 1; i < pingHistory[targetId].length; i++) {
                            variations.push(Math.abs(pingHistory[targetId][i] - pingHistory[targetId][i-1]));
                        }
                        const avgJitter = variations.reduce((a, b) => a + b, 0) / variations.length;
                        jitterElement.textContent = `${avgJitter.toFixed(2)} ms`;
                    } else {
                        jitterElement.textContent = '-- ms';
                    }

                    if (showAlert) {
                        showToast(`${target.name} (${target.host}): ${result.alive ? 'Online' : 'Offline'} - ${result.time}ms`, result.alive ? 'success' : 'error');
                    }

                    // Show notification for failures if enabled
                    if (notificationSettings.enabled && !result.alive) {
                        if (notificationSettings.notifyOnDown) {
                            showToast(`‚ö†Ô∏è ${target.name} is DOWN - Host unreachable`, 'error', 5000);
                        }
                    }

                    // Show notification for high latency if enabled
                    if (notificationSettings.enabled && notificationSettings.notifyOnHighLatency && result.alive) {
                        const latency = result.time !== 'unknown' ? parseFloat(result.time) : 0;
                        if (latency > notificationSettings.latencyThreshold) {
                            showToast(`üêå ${target.name} - High latency: ${latency}ms (threshold: ${notificationSettings.latencyThreshold}ms)`, 'warning', 5000);
                        }
                    }
                } else {
                    throw new Error('Ping failed');
                }
            } catch (error) {
                console.error('Ping error:', error);
                statusElement.innerHTML = '<i class="fas fa-exclamation-triangle mr-1"></i>Error';
                statusElement.className = 'inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-900 text-red-200';
                latencyElement.textContent = '-- ms';
                packetLossElement.textContent = '-- %';
                jitterElement.textContent = '-- ms';

                if (showAlert) {
                    showToast(`Failed to ping target: ${error.message}`, 'error');
                }

                // Show notification for timeout if enabled
                if (notificationSettings.enabled && notificationSettings.notifyOnTimeout) {
                    try {
                        const response = await fetch('/api/ping-targets');
                        const targets = await response.json();
                        const target = targets.find(t => t.id === targetId);
                        if (target) {
                            showToast(`‚è±Ô∏è ${target.name} - Ping timeout or error`, 'warning', 5000);
                        }
                    } catch (e) {
                        console.error('Error showing timeout notification:', e);
                    }
                }
            }
        }

        function showAddTargetModal() {
            document.getElementById('addTargetModal').classList.remove('hidden');
        }

        function hideAddTargetModal() {
            document.getElementById('addTargetModal').classList.add('hidden');
            document.getElementById('addTargetForm').reset();
        }

        async function addTarget(event) {
            event.preventDefault();

            const name = document.getElementById('targetName').value;
            const host = document.getElementById('targetHost').value;
            const group = document.getElementById('targetGroup').value;

            try {
                const response = await fetch('/api/ping-targets', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ name, host, group })
                });

                const result = await response.json();

                if (result.success) {
                    showToast('Target added successfully!', 'success');
                    hideAddTargetModal();
                    // Create chart for new target instead of reloading
                    createChartForTarget(result.target);
                    // Refresh the page to show the new target card
                    location.reload();
                } else {
                    showToast(`Error: ${result.error}`, 'error');
                }
            } catch (error) {
                console.error('Error adding target:', error);
                showToast('Failed to add target', 'error');
            }
        }

        async function deleteTarget(targetId) {
            if (!confirm('Are you sure you want to delete this target?')) {
                return;
            }

            try {
                const response = await fetch(`/api/ping-targets/${targetId}`, {
                    method: 'DELETE'
                });

                const result = await response.json();

                if (result.success) {
                    showToast('Target deleted successfully!', 'success');
                    // Remove chart for deleted target
                    if (pingCharts[targetId]) {
                        pingCharts[targetId].destroy();
                        delete pingCharts[targetId];
                        delete chartData[targetId];
                    }
                    location.reload(); // Refresh to update the list
                } else {
                    showToast(`Error: ${result.error}`, 'error');
                }
            } catch (error) {
                console.error('Error deleting target:', error);
                showToast('Failed to delete target', 'error');
            }
        }

        async function toggleTarget(targetId) {
            try {
                const response = await fetch(`/api/ping-targets/${targetId}/toggle`, {
                    method: 'PATCH'
                });

                const result = await response.json();

                if (result.success) {
                    location.reload(); // Refresh to update the UI
                } else {
                    showToast(`Error: ${result.error}`, 'error');
                }
            } catch (error) {
                console.error('Error toggling target:', error);
                showToast('Failed to toggle target', 'error');
            }
        }
    </script>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ping Monitoring - SMon</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 text-gray-100 min-h-screen">
    <div class="flex h-screen">
        <!-- Mobile Menu Button -->
        <button id="mobile-menu-button" class="md:hidden fixed top-4 left-4 z-50 bg-slate-800 p-2 rounded-lg border border-slate-700 shadow-lg">
            <i class="fas fa-bars text-white"></i>
        </button>

        <!-- Mobile Overlay -->
        <div id="mobile-overlay" class="md:hidden fixed inset-0 bg-black bg-opacity-50 z-30 hidden"></div>

        <!-- Sidebar -->
        <div id="sidebar" class="w-64 bg-slate-950 border-r border-slate-700 shadow-xl flex flex-col fixed md:relative inset-y-0 left-0 z-40 transform -translate-x-full md:translate-x-0 transition-transform duration-300 ease-in-out">
            <!-- Header -->
            <div class="p-6 border-b border-slate-700">
                <div class="flex items-center gap-3 mb-1">
                    <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-blue-600 rounded-lg flex items-center justify-center">
                        <i class="fas fa-chart-line text-white font-bold text-lg"></i>
                    </div>
                    <div>
                        <h1 class="text-lg font-bold text-white">SMon</h1>
                        <p class="text-xs text-gray-400">SNMP Monitor</p>
                    </div>
                </div>
            </div>

            <!-- Navigation -->
            <nav class="flex-1 px-4 py-6 overflow-y-auto">
                <div class="space-y-2">
                    <a href="/" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 hover:bg-slate-700 transition-all duration-200">
                        <i class="fas fa-chart-area w-5"></i>
                        <span>Dashboard</span>
                    </a>
                    <a href="/monitoring" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 hover:bg-slate-700 transition-all duration-200">
                        <i class="fas fa-gauge-high w-5"></i>
                        <span>Bandwidth Monitor</span>
                    </a>
                    <a href="/ping" class="flex items-center gap-3 px-4 py-3 rounded-lg bg-gradient-to-r from-blue-600 to-blue-700 text-white font-medium transition-all hover:shadow-lg">
                        <i class="fas fa-network-wired w-5"></i>
                        <span>Ping Monitor</span>
                    </a>
                    <a href="/devices" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 hover:bg-slate-700 transition-all duration-200">
                        <i class="fas fa-server w-5"></i>
                        <span>Devices</span>
                    </a>
                    <a href="/settings" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 hover:bg-slate-700 transition-all duration-200">
                        <i class="fas fa-cog w-5"></i>
                        <span>Settings</span>
                    </a>
                    <a href="/about" class="flex items-center gap-3 px-4 py-3 rounded-lg text-gray-300 hover:bg-slate-700 transition-all duration-200">
                        <i class="fas fa-info-circle w-5"></i>
                        <span>About</span>
                    </a>
                    <a href="/logout" class="flex items-center gap-3 px-4 py-3 rounded-lg text-red-400 hover:bg-red-500/20 hover:text-red-300 transition-all duration-200 mt-4">
                        <i class="fas fa-sign-out-alt w-5"></i>
                        <span>Logout</span>
                    </a>
                </div>
            </nav>

            <!-- Footer -->
            <div class="px-4 py-4 border-t border-slate-700">
                <div class="text-xs text-gray-500 text-center">
                    <p>SNMP Monitor v2.0</p>
                    <p>Network Intelligence</p>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="flex-1 overflow-auto">
            <!-- Top Header -->
            <div class="bg-slate-950 border-b border-slate-700 px-4 md:px-8 py-4 sticky top-0 z-10">
                <div class="flex flex-col md:flex-row md:justify-between md:items-center gap-4">
                    <div>
                        <h2 class="text-xl md:text-2xl font-bold text-white">Ping Monitoring</h2>
                        <p class="text-gray-400 text-sm mt-1">Monitor network connectivity and latency</p>
                    </div>
                    <div class="flex flex-col sm:flex-row items-start sm:items-center gap-3">
                        <div class="text-left sm:text-right">
                            <p class="text-sm text-gray-400"><i class="fas fa-circle text-green-500 mr-2"></i>Monitoring Active</p>
                        </div>
                        <button onclick="showAddTargetModal()" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium transition-all w-full sm:w-auto">
                            <i class="fas fa-plus mr-2"></i>Add Target
                        </button>
                    </div>
                </div>
            </div>

            <!-- Content -->
            <div class="p-4 md:p-8">
                <!-- Ping Targets by Group -->
                <% Object.keys(groupedTargets).forEach(group => { %>
                <div class="mb-6 md:mb-8">
                    <h3 class="text-lg md:text-xl font-semibold text-white mb-4 md:mb-6 flex items-center">
                        <i class="fas fa-folder mr-3 text-blue-400"></i>
                        <%= group %>
                    </h3>
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6">
                        <% groupedTargets[group].forEach(target => { %>
                        <div class="bg-slate-800 rounded-lg p-4 md:p-6 border border-slate-700 hover:border-slate-600 transition-all shadow-lg">
                            <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start mb-4 gap-3">
                                <div class="flex-1 min-w-0">
                                    <h4 class="text-base md:text-lg font-semibold text-white mb-1 truncate"><%= target.name %></h4>
                                    <p class="text-gray-400 text-sm truncate"><%= target.host %></p>
                                </div>
                                <div class="flex items-center space-x-2 flex-shrink-0">
                                    <span id="status-<%= target.id %>" class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium">
                                        <i class="fas fa-spinner fa-spin mr-1"></i>Checking...
                                    </span>
                                    <div class="flex space-x-1">
                                        <button onclick="toggleTarget(<%= target.id %>)" class="text-gray-400 hover:text-gray-300 transition-colors p-1" title="<%= target.enabled ? 'Disable' : 'Enable' %>">
                                            <i class="fas fa-<%= target.enabled ? 'toggle-on' : 'toggle-off' %> text-sm"></i>
                                        </button>
                                        <button onclick="deleteTarget(<%= target.id %>)" class="text-red-400 hover:text-red-300 transition-colors p-1" title="Delete">
                                            <i class="fas fa-trash text-xs"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <div class="space-y-3 md:space-y-4">
                                <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 md:gap-4">
                                    <div class="bg-slate-700 rounded-lg p-3">
                                        <div class="flex items-center justify-between">
                                            <span class="text-xs text-gray-400">Latency</span>
                                            <i class="fas fa-clock text-blue-400"></i>
                                        </div>
                                        <p id="latency-<%= target.id %>" class="text-lg font-semibold text-white mt-1">-- ms</p>
                                    </div>
                                    <div class="bg-slate-700 rounded-lg p-3">
                                        <div class="flex items-center justify-between">
                                            <span class="text-xs text-gray-400">Packet Loss</span>
                                            <i class="fas fa-exclamation-triangle text-yellow-400"></i>
                                        </div>
                                        <p id="packetloss-<%= target.id %>" class="text-lg font-semibold text-white mt-1">-- %</p>
                                    </div>
                                </div>
                                <div class="bg-slate-700 rounded-lg p-3">
                                    <div class="flex items-center justify-between">
                                        <span class="text-xs text-gray-400">Jitter</span>
                                        <i class="fas fa-wave-square text-purple-400"></i>
                                    </div>
                                    <p id="jitter-<%= target.id %>" class="text-lg font-semibold text-white mt-1">-- ms</p>
                                </div>
                            </div>

                            <div class="mt-4">
                                <button onclick="pingTarget(<%= target.id %>)" class="w-full bg-slate-700 hover:bg-slate-600 text-white px-3 py-2 rounded-lg text-sm font-medium transition-all">
                                    <i class="fas fa-play mr-2"></i>Test Now
                                </button>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>
                <% }); %>

                <!-- Empty State -->
                <% if (Object.keys(groupedTargets).length === 0) { %>
                <div class="text-center py-8 md:py-12">
                    <div class="w-20 h-20 md:w-24 md:h-24 bg-slate-800 rounded-full flex items-center justify-center mx-auto mb-4">
                        <i class="fas fa-network-wired text-3xl md:text-4xl text-gray-400"></i>
                    </div>
                    <h3 class="text-lg md:text-xl font-semibold text-white mb-2">No Ping Targets</h3>
                    <p class="text-gray-400 mb-4 md:mb-6 text-sm md:text-base px-4">Add your first ping target to start monitoring network connectivity.</p>
                    <button onclick="showAddTargetModal()" class="bg-blue-600 hover:bg-blue-700 text-white px-4 md:px-6 py-2 md:py-3 rounded-lg font-medium transition-all">
                        <i class="fas fa-plus mr-2"></i>Add First Target
                    </button>
                </div>
                <% } %>
            </div>
        </div>

        <!-- Charts Section -->
        <div class="mt-8 md:mt-12">
            <div class="bg-slate-800 rounded-lg p-4 md:p-6 border border-slate-700 shadow-lg">
                <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-6 gap-4">
                    <h2 class="text-xl md:text-2xl font-bold text-white flex items-center">
                        <i class="fas fa-chart-line mr-3 text-blue-400"></i>
                        Ping History Charts
                    </h2>
                    <div class="flex flex-col sm:flex-row gap-3">
                        <select id="chartTargetSelect" class="px-3 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <option value="">Select Target</option>
                        </select>
                        <select id="chartTimeRange" class="px-3 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <option value="1">Last Hour</option>
                            <option value="6">Last 6 Hours</option>
                            <option value="24" selected>Last 24 Hours</option>
                            <option value="168">Last 7 Days</option>
                            <option value="720">Last 30 Days</option>
                        </select>
                        <button onclick="loadChartData()" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium transition-all">
                            <i class="fas fa-sync-alt mr-2"></i>Refresh
                        </button>
                    </div>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    <!-- Latency Chart -->
                    <div class="bg-slate-700 rounded-lg p-4">
                        <h3 class="text-lg font-semibold text-white mb-4 flex items-center">
                            <i class="fas fa-clock mr-2 text-blue-400"></i>
                            Latency (ms)
                        </h3>
                        <canvas id="latencyChart" width="400" height="200"></canvas>
                    </div>

                    <!-- Packet Loss Chart -->
                    <div class="bg-slate-700 rounded-lg p-4">
                        <h3 class="text-lg font-semibold text-white mb-4 flex items-center">
                            <i class="fas fa-exclamation-triangle mr-2 text-yellow-400"></i>
                            Packet Loss (%)
                        </h3>
                        <canvas id="packetLossChart" width="400" height="200"></canvas>
                    </div>
                </div>

                <!-- Uptime Chart -->
                <div class="mt-6 bg-slate-700 rounded-lg p-4">
                    <h3 class="text-lg font-semibold text-white mb-4 flex items-center">
                        <i class="fas fa-signal mr-2 text-green-400"></i>
                        Uptime Status
                    </h3>
                    <canvas id="uptimeChart" width="400" height="100"></canvas>
                </div>
            </div>
        </div>

        <!-- Report Section -->
        <div class="mt-8 md:mt-12">
            <div class="bg-slate-800 rounded-lg p-4 md:p-6 border border-slate-700 shadow-lg">
                <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-6 gap-4">
                    <h2 class="text-xl md:text-2xl font-bold text-white flex items-center">
                        <i class="fas fa-file-alt mr-3 text-green-400"></i>
                        Ping Report
                    </h2>
                    <div class="flex flex-col sm:flex-row gap-3">
                        <select id="reportPeriod" class="px-3 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <option value="1">Last 24 Hours</option>
                            <option value="7" selected>Last 7 Days</option>
                            <option value="30">Last 30 Days</option>
                        </select>
                        <button onclick="generateReport()" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-medium transition-all">
                            <i class="fas fa-chart-bar mr-2"></i>Generate Report
                        </button>
                    </div>
                </div>

                <div id="reportContent" class="hidden">
                    <div class="overflow-x-auto">
                        <table class="w-full text-sm text-left text-gray-300">
                            <thead class="text-xs text-gray-400 uppercase bg-slate-700">
                                <tr>
                                    <th scope="col" class="px-6 py-3">Target</th>
                                    <th scope="col" class="px-6 py-3">Total Pings</th>
                                    <th scope="col" class="px-6 py-3">Uptime</th>
                                    <th scope="col" class="px-6 py-3">Avg Latency</th>
                                    <th scope="col" class="px-6 py-3">Avg Packet Loss</th>
                                </tr>
                            </thead>
                            <tbody id="reportTableBody">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Target Modal -->
    <div id="addTargetModal" class="fixed inset-0 bg-black bg-opacity-50 overflow-y-auto h-full w-full z-50 hidden">
        <div class="relative top-4 md:top-20 mx-auto p-4 md:p-5 border border-slate-700 w-full max-w-sm md:max-w-md shadow-2xl rounded-lg bg-slate-800">
            <div class="mt-3">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-lg font-medium text-white">Add Ping Target</h3>
                    <button onclick="hideAddTargetModal()" class="text-gray-400 hover:text-white p-1">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <form id="addTargetForm" onsubmit="addTarget(event)">
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-300 mb-2">Name</label>
                        <input type="text" id="targetName" required class="w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    </div>
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-300 mb-2">Host/IP</label>
                        <input type="text" id="targetHost" required placeholder="e.g., 8.8.8.8 or google.com" class="w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    </div>
                    <div class="mb-6">
                        <label class="block text-sm font-medium text-gray-300 mb-2">Group</label>
                        <input type="text" id="targetGroup" required placeholder="e.g., DNS, Network, Servers" class="w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    </div>
                    <div class="flex flex-col sm:flex-row justify-end space-y-2 sm:space-y-0 sm:space-x-3">
                        <button type="button" onclick="hideAddTargetModal()" class="px-4 py-2 text-gray-300 bg-slate-700 rounded-lg hover:bg-slate-600 transition-all order-2 sm:order-1">Cancel</button>
                        <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-all order-1 sm:order-2">Add Target</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </div>

    <!-- Toast Notifications -->
    <div id="toast-container" class="fixed top-4 left-4 right-4 md:left-auto md:right-4 md:max-w-sm z-50 space-y-2"></div>

    <script>
        // Mobile Menu Script
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileOverlay = document.getElementById('mobile-overlay');
        const sidebar = document.getElementById('sidebar');

        mobileMenuButton.addEventListener('click', () => {
          sidebar.classList.toggle('-translate-x-full');
          mobileOverlay.classList.toggle('hidden');
        });

        mobileOverlay.addEventListener('click', () => {
          sidebar.classList.add('-translate-x-full');
          mobileOverlay.classList.add('hidden');
        });

        // Toast notification system
        function showToast(message, type = 'info', duration = 3000) {
            const toastContainer = document.getElementById('toast-container');

      const toast = document.createElement('div');
      toast.className = `flex items-center p-4 rounded-lg shadow-lg transform transition-all duration-300 translate-x-full md:translate-x-full max-w-full md:max-w-sm`;            let iconClass = '';
            let bgColor = '';

            switch(type) {
                case 'success':
                    iconClass = 'fas fa-check-circle';
                    bgColor = 'bg-green-500';
                    break;
                case 'error':
                    iconClass = 'fas fa-exclamation-circle';
                    bgColor = 'bg-red-500';
                    break;
                case 'warning':
                    iconClass = 'fas fa-exclamation-triangle';
                    bgColor = 'bg-yellow-500';
                    break;
                default:
                    iconClass = 'fas fa-info-circle';
                    bgColor = 'bg-blue-500';
            }

            toast.classList.add(bgColor, 'text-white');

            toast.innerHTML = `
                <i class="${iconClass} mr-3"></i>
                <span class="flex-1">${message}</span>
                <button onclick="this.parentElement.remove()" class="ml-3 hover:opacity-75">
                    <i class="fas fa-times"></i>
                </button>
            `;

            toastContainer.appendChild(toast);

            // Animate in
            setTimeout(() => {
                toast.classList.remove('translate-x-full');
            }, 10);

            // Auto remove
            setTimeout(() => {
                toast.classList.add('translate-x-full');
                setTimeout(() => {
                    if (toast.parentElement) {
                        toast.remove();
                    }
                }, 300);
            }, duration);
        }

        let pingHistory = {};

        // Initialize ping monitoring
        document.addEventListener('DOMContentLoaded', function() {
            startPingMonitoring();
        });

        function startPingMonitoring() {
            // Ping all enabled targets every configured interval
            const pingCheckInterval = <%= settings.pingInterval || 30000 %>;
            setInterval(() => {
                pingAllTargets();
            }, pingCheckInterval);

            // Initial ping
            pingAllTargets();
        }

        async function pingAllTargets() {
            const response = await fetch('/api/ping-targets');
            const targets = await response.json();

            targets.filter(target => target.enabled).forEach(target => {
                pingTarget(target.id, false); // Silent ping
            });
        }

        async function pingTarget(targetId, showAlert = true) {
            const statusElement = document.getElementById(`status-${targetId}`);
            const latencyElement = document.getElementById(`latency-${targetId}`);
            const packetLossElement = document.getElementById(`packetloss-${targetId}`);
            const jitterElement = document.getElementById(`jitter-${targetId}`);

            // Set loading state
            statusElement.innerHTML = '<i class="fas fa-spinner fa-spin mr-1"></i>Pinging...';
            statusElement.className = 'inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-900 text-yellow-200';

            try {
                const response = await fetch('/api/ping-targets');
                const targets = await response.json();
                const target = targets.find(t => t.id === targetId);

                if (!target) return;

                const pingResponse = await fetch('/api/ping-test', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ host: target.host, targetId: targetId })
                });

                const result = await pingResponse.json();

                if (result.success) {
                    // Update status
                    if (result.alive) {
                        statusElement.innerHTML = '<i class="fas fa-check-circle mr-1"></i>Online';
                        statusElement.className = 'inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-900 text-green-200';
                    } else {
                        statusElement.innerHTML = '<i class="fas fa-times-circle mr-1"></i>Offline';
                        statusElement.className = 'inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-900 text-red-200';
                    }

                    // Update metrics
                    latencyElement.textContent = result.time !== 'unknown' ? `${result.time} ms` : '-- ms';
                    packetLossElement.textContent = `${result.packetLoss}%`;

                    // Calculate jitter (simplified)
                    if (!pingHistory[targetId]) {
                        pingHistory[targetId] = [];
                    }
                    pingHistory[targetId].push(result.time !== 'unknown' ? parseFloat(result.time) : 0);

                    // Keep only last 5 measurements
                    if (pingHistory[targetId].length > 5) {
                        pingHistory[targetId].shift();
                    }

                    // Calculate jitter
                    if (pingHistory[targetId].length > 1) {
                        const variations = [];
                        for (let i = 1; i < pingHistory[targetId].length; i++) {
                            variations.push(Math.abs(pingHistory[targetId][i] - pingHistory[targetId][i-1]));
                        }
                        const avgJitter = variations.reduce((a, b) => a + b, 0) / variations.length;
                        jitterElement.textContent = `${avgJitter.toFixed(2)} ms`;
                    } else {
                        jitterElement.textContent = '-- ms';
                    }

                    if (showAlert) {
                        showToast(`${target.name} (${target.host}): ${result.alive ? 'Online' : 'Offline'} - ${result.time}ms`, result.alive ? 'success' : 'error');
                    }
                } else {
                    throw new Error('Ping failed');
                }
            } catch (error) {
                console.error('Ping error:', error);
                statusElement.innerHTML = '<i class="fas fa-exclamation-triangle mr-1"></i>Error';
                statusElement.className = 'inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-900 text-red-200';
                latencyElement.textContent = '-- ms';
                packetLossElement.textContent = '-- %';
                jitterElement.textContent = '-- ms';

                if (showAlert) {
                    showToast(`Failed to ping target: ${error.message}`, 'error');
                }
            }
        }

        function showAddTargetModal() {
            document.getElementById('addTargetModal').classList.remove('hidden');
        }

        function hideAddTargetModal() {
            document.getElementById('addTargetModal').classList.add('hidden');
            document.getElementById('addTargetForm').reset();
        }

        async function addTarget(event) {
            event.preventDefault();

            const name = document.getElementById('targetName').value;
            const host = document.getElementById('targetHost').value;
            const group = document.getElementById('targetGroup').value;

            try {
                const response = await fetch('/api/ping-targets', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ name, host, group })
                });

                const result = await response.json();

                if (result.success) {
                    showToast('Target added successfully!', 'success');
                    hideAddTargetModal();
                    location.reload(); // Refresh to show new target
                } else {
                    showToast(`Error: ${result.error}`, 'error');
                }
            } catch (error) {
                console.error('Error adding target:', error);
                showToast('Failed to add target', 'error');
            }
        }

        async function deleteTarget(targetId) {
            if (!confirm('Are you sure you want to delete this target?')) {
                return;
            }

            try {
                const response = await fetch(`/api/ping-targets/${targetId}`, {
                    method: 'DELETE'
                });

                const result = await response.json();

                if (result.success) {
                    showToast('Target deleted successfully!', 'success');
                    location.reload(); // Refresh to update the list
                } else {
                    showToast(`Error: ${result.error}`, 'error');
                }
            } catch (error) {
                console.error('Error deleting target:', error);
                showToast('Failed to delete target', 'error');
            }
        }

        async function toggleTarget(targetId) {
            try {
                const response = await fetch(`/api/ping-targets/${targetId}/toggle`, {
                    method: 'PATCH'
                });

                const result = await response.json();

                if (result.success) {
                    location.reload(); // Refresh to update the UI
                } else {
                    showToast(`Error: ${result.error}`, 'error');
                }
            } catch (error) {
                console.error('Error toggling target:', error);
                showToast('Failed to toggle target', 'error');
            }
        }

        // Chart variables
        let latencyChart, packetLossChart, uptimeChart;

        // Initialize charts and populate target select
        document.addEventListener('DOMContentLoaded', function() {
            startPingMonitoring();
            initializeCharts();
            populateTargetSelect();
        });

        function initializeCharts() {
            const chartOptions = {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        labels: {
                            color: '#e2e8f0'
                        }
                    }
                },
                scales: {
                    x: {
                        ticks: {
                            color: '#94a3b8'
                        },
                        grid: {
                            color: '#374151'
                        }
                    },
                    y: {
                        ticks: {
                            color: '#94a3b8'
                        },
                        grid: {
                            color: '#374151'
                        }
                    }
                }
            };

            // Latency Chart
            const latencyCtx = document.getElementById('latencyChart').getContext('2d');
            latencyChart = new Chart(latencyCtx, {
                type: 'line',
                data: {
                    labels: [],
                    datasets: [{
                        label: 'Latency (ms)',
                        data: [],
                        borderColor: '#3b82f6',
                        backgroundColor: 'rgba(59, 130, 246, 0.1)',
                        borderWidth: 2,
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    ...chartOptions,
                    scales: {
                        ...chartOptions.scales,
                        y: {
                            ...chartOptions.scales.y,
                            beginAtZero: true
                        }
                    }
                }
            });

            // Packet Loss Chart
            const packetLossCtx = document.getElementById('packetLossChart').getContext('2d');
            packetLossChart = new Chart(packetLossCtx, {
                type: 'line',
                data: {
                    labels: [],
                    datasets: [{
                        label: 'Packet Loss (%)',
                        data: [],
                        borderColor: '#f59e0b',
                        backgroundColor: 'rgba(245, 158, 11, 0.1)',
                        borderWidth: 2,
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    ...chartOptions,
                    scales: {
                        ...chartOptions.scales,
                        y: {
                            ...chartOptions.scales.y,
                            beginAtZero: true,
                            max: 100
                        }
                    }
                }
            });

            // Uptime Chart
            const uptimeCtx = document.getElementById('uptimeChart').getContext('2d');
            uptimeChart = new Chart(uptimeCtx, {
                type: 'line',
                data: {
                    labels: [],
                    datasets: [{
                        label: 'Status (1=Online, 0=Offline)',
                        data: [],
                        borderColor: '#10b981',
                        backgroundColor: 'rgba(16, 185, 129, 0.1)',
                        borderWidth: 2,
                        fill: true,
                        tension: 0.1,
                        stepped: true
                    }]
                },
                options: {
                    ...chartOptions,
                    scales: {
                        ...chartOptions.scales,
                        y: {
                            ...chartOptions.scales.y,
                            beginAtZero: true,
                            max: 1,
                            ticks: {
                                ...chartOptions.scales.y.ticks,
                                callback: function(value) {
                                    return value === 1 ? 'Online' : 'Offline';
                                }
                            }
                        }
                    }
                }
            });
        }

        function populateTargetSelect() {
            const select = document.getElementById('chartTargetSelect');
            fetch('/api/ping-targets')
                .then(response => response.json())
                .then(targets => {
                    targets.forEach(target => {
                        const option = document.createElement('option');
                        option.value = target.id;
                        option.textContent = `${target.name} (${target.host})`;
                        select.appendChild(option);
                    });
                })
                .catch(error => console.error('Error loading targets:', error));
        }

        async function loadChartData() {
            const targetId = document.getElementById('chartTargetSelect').value;
            const hours = document.getElementById('chartTimeRange').value;

            if (!targetId) {
                showToast('Please select a target', 'warning');
                return;
            }

            try {
                const response = await fetch(`/api/ping-history/${targetId}?hours=${hours}`);
                const result = await response.json();

                if (result.success) {
                    updateCharts(result.data);
                    showToast('Chart data loaded successfully', 'success');
                } else {
                    showToast('Failed to load chart data', 'error');
                }
            } catch (error) {
                console.error('Error loading chart data:', error);
                showToast('Failed to load chart data', 'error');
            }
        }

        function updateCharts(data) {
            // Prepare data for charts
            const labels = data.map(entry => {
                const date = new Date(entry.timestamp);
                return date.toLocaleString();
            });

            const latencyData = data.map(entry => entry.time);
            const packetLossData = data.map(entry => entry.packetLoss);
            const uptimeData = data.map(entry => entry.alive ? 1 : 0);

            // Update Latency Chart
            latencyChart.data.labels = labels;
            latencyChart.data.datasets[0].data = latencyData;
            latencyChart.update();

            // Update Packet Loss Chart
            packetLossChart.data.labels = labels;
            packetLossChart.data.datasets[0].data = packetLossData;
            packetLossChart.update();

            // Update Uptime Chart
            uptimeChart.data.labels = labels;
            uptimeChart.data.datasets[0].data = uptimeData;
            uptimeChart.update();
        }

        async function generateReport() {
            const days = document.getElementById('reportPeriod').value;

            try {
                const response = await fetch(`/api/ping-report?days=${days}`);
                const result = await response.json();

                if (result.success) {
                    displayReport(result.report);
                    document.getElementById('reportContent').classList.remove('hidden');
                    showToast('Report generated successfully', 'success');
                } else {
                    showToast('Failed to generate report', 'error');
                }
            } catch (error) {
                console.error('Error generating report:', error);
                showToast('Failed to generate report', 'error');
            }
        }

        function displayReport(report) {
            const tbody = document.getElementById('reportTableBody');
            tbody.innerHTML = '';

            Object.values(report).forEach(item => {
                const row = document.createElement('tr');
                row.className = 'border-b border-slate-600 hover:bg-slate-700';
                row.innerHTML = `
                    <td class="px-6 py-4 font-medium text-white">
                        ${item.target.name}<br>
                        <span class="text-sm text-gray-400">${item.target.host}</span>
                    </td>
                    <td class="px-6 py-4">${item.totalPings}</td>
                    <td class="px-6 py-4">
                        <span class="px-2 py-1 rounded-full text-xs font-medium ${parseFloat(item.uptime) >= 99 ? 'bg-green-900 text-green-200' : parseFloat(item.uptime) >= 95 ? 'bg-yellow-900 text-yellow-200' : 'bg-red-900 text-red-200'}">
                            ${item.uptime}%
                        </span>
                    </td>
                    <td class="px-6 py-4">${item.avgLatency} ms</td>
                    <td class="px-6 py-4">${item.avgPacketLoss}%</td>
                `;
                tbody.appendChild(row);
            });
        }
    </script>
</body>
</html>